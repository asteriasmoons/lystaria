---
// @ts-nocheck
// Blog listing page
import BaseLayout from "../../layouts/BaseLayout.astro";
import { getCollection } from "astro:content";

// Get all posts, sorted by date (newest first)
const allPosts = await getCollection("posts");
const sortedPosts = allPosts.sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);
---

<BaseLayout
  title="Blog · Lystaria"
  description="Musings on magic, growth, and the space between the mystical and mundane."
  image="/banner.png"
  type="website"
>
  <div class="container-wide">
    <header class="blog-header">
      <h1>The Grimoire</h1>
      <p class="blog-intro">
        Musings on magic, growth, and the space between the mystical and
        mundane.
      </p>
    </header>

    <div class="posts-grid">
      {
        sortedPosts.map((post) => {
          const formattedDate = new Date(post.data.pubDate).toLocaleDateString(
            "en-US",
            {
              year: "numeric",
              month: "long",
              day: "numeric",
            }
          );

          return (
            <article class="post-card">
              <a href={`/blog/${post.slug}`} class="post-link">
                <div class="post-header">
                  <h2>{post.data.title}</h2>
                  <time
                    class="post-date"
                    datetime={post.data.pubDate.toISOString()}
                  >
                    {formattedDate}
                  </time>
                </div>

                <p class="post-description">{post.data.description}</p>

                <div class="read-more">Read more →</div>
              </a>

              {post.data.tags && post.data.tags.length > 0 && (
                <div class="post-tags">
                  {post.data.tags.map((tag) => (
                    <a href={`/blog/tag/${tag}`} class="tag">
                      {tag}
                    </a>
                  ))}
                </div>
              )}
            </article>
          );
        })
      }
    </div>
  </div>

  <style>
    .container-wide {
      max-width: 1200px;
      margin: 0 auto;
      padding: 0 2rem;
    }

    .blog-header {
      text-align: center;
      padding: 3rem 0 4rem;
      border-bottom: 1px solid var(--color-border);
      margin-bottom: 4rem;
    }

    .blog-header h1 {
      font-size: 3rem;
      margin-bottom: 1rem;
      color: #ffffff;
    }

    .blog-intro {
      font-size: 1.2rem;
      color: var(--color-text-muted);
      max-width: 600px;
      margin: 0 auto;
    }

    .posts-grid {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
      gap: 2rem;
      padding-bottom: 4rem;
    }

    .post-card {
      background: linear-gradient(
        135deg,
        rgba(126, 126, 255) 0%,
        rgba(90, 200, 250) 50%,
        rgba(10, 10, 15, 1) 100%
      );
      border: 1px solid var(--color-border);
      border-radius: 8px;
      transition: all 0.3s ease;
      overflow: hidden;
      height: 100%;
    }

    .post-card:hover {
      transform: translateY(-6px);
      border-color: var(--color-accent);
      box-shadow: 0 8px 24px rgba(167, 139, 250, 0.15);
    }

    .post-link {
      display: flex;
      flex-direction: column;
      flex-grow: 1;
      padding: 2rem 2rem 1rem 2rem;
      color: inherit;
      text-decoration: none;
    }

    .post-header {
      margin-bottom: 1rem;
    }

    .post-card h2 {
      font-size: 1.5rem;
      margin-bottom: 0.5rem;
      color: #ffffff;
      line-height: 1.3;
    }

    .post-date {
      display: block;
      color: rgba(255, 255, 255, 0.7);
      font-size: 0.9rem;
      font-style: italic;
    }

    .post-description {
      color: rgba(255, 255, 255, 0.85);
      line-height: 1.7;
      margin-bottom: 1.5rem;
      flex-grow: 1;
    }

    .post-tags {
      display: flex;
      gap: 0.5rem;
      flex-wrap: wrap;
      padding: 0 2rem 2rem 2rem;
    }

    .tag {
      background-color: var(--color-bg);
      color: var(--color-accent);
      padding: 0.25rem 0.75rem;
      border-radius: 20px;
      font-size: 0.85rem;
      border: 1px solid var(--color-border);
      text-decoration: none;
      transition: all 0.3s ease;
    }

    .tag:hover {
      background-color: var(--color-accent);
      color: var(--color-bg);
      transform: translateY(-2px);
    }

    .post-card:hover .tag {
      border-color: var(--color-accent);
    }

    .read-more {
      color: #ffffff;
      font-size: 0.95rem;
      font-weight: 500;
      margin-top: auto;
      transition: color 0.3s ease;
    }

    .post-card:hover .read-more {
      color: rgba(255, 255, 255, 0.7);
    }

    @media (max-width: 768px) {
      .blog-header h1 {
        font-size: 2rem;
      }

      .posts-grid {
        grid-template-columns: 1fr;
      }
    }
  </style>
</BaseLayout>
