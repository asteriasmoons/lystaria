---
 // src/pages/blog/[...slug].astro
 // @ts-nocheck
import { getCollection } from "astro:content";
import type { CollectionEntry } from "astro:content";
import BaseLayout from "../../layouts/BaseLayout.astro";
import Comments from "../../components/Comments.astro";

export const prerender = true;

export async function getStaticPaths() {
  const posts = await getCollection("posts");
  return posts.map((post: CollectionEntry<"posts">) => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

interface Props {
  post: CollectionEntry<"posts">;
}

const { post } = Astro.props;
const { Content } = await post.render();

const formattedDate = new Date(post.data.pubDate).toLocaleDateString("en-US", {
  year: "numeric",
  month: "long",
  day: "numeric",
});
---

<BaseLayout
  title={post.data.title + " · Lystaria"}
  description={post.data.description}
  image={post.data.coverImage || "/banner.png"}
  type="article"
>
  <div id="progress-bar"></div>

  <script
    type="application/ld+json"
    set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "BlogPosting",
      headline: post.data.title,
      description: post.data.description,
      author: { "@type": "Person", name: "Asteria" },
      datePublished: post.data.pubDate.toISOString(),
      url: `https://lystaria.im/blog/${post.slug}`,
    })}
  />

  <div class="post-container">
    <header class="post-header">
      <h1 class="post-title">{post.data.title}</h1>

      <div class="post-meta">
        <time datetime={post.data.pubDate.toISOString()}>{formattedDate}</time>

        {post.data.tags && (
          <div class="post-tags">
            {post.data.tags.map((tag) => (
              <a href={`/blog/tag/${tag}`} class="tag-link">
                <span class="tag">{tag}</span>
              </a>
            ))}
          </div>
        )}
      </div>
    </header>

    <div class="post-content">
      <Content />
    </div>

    <Comments />
  </div>
  </BaseLayout>

  <style is:global>
    .post-container {
      max-width: 1200px;
      margin: 0 auto;
    }

    .post-header {
      text-align: center;
      margin-bottom: 1rem;
      padding-bottom: 2rem;
      border-bottom: 1px solid var(--color-border);
    }

    .post-title {
      font-size: 2.5rem;
      margin-bottom: 1rem;
      line-height: 1.2;
    }

    .post-meta {
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: 1rem;
      color: var(--color-text-muted);
      font-size: 0.95rem;
    }

    .post-tags {
      display: flex;
      gap: 0.5rem;
      flex-wrap: wrap;
      justify-content: center;
    }

    .tag {
      background-color: var(--overlay-gradient-accent);
      color: var(--color-accent);
      padding: 0.25rem 0.75rem;
      border-radius: 20px;
      font-size: 0.85rem;
      border: 1px solid var(--color-border);
    }

    .tag-link {
      text-decoration: none;
    }

    .tag-link:hover .tag {
      background-color: var(--gradient-accent);
      color: var(--color-bg);
      transform: translateY(-2px);
    }

    .post-content {
     font-size: 0.95rem;
     line-height: 1.4; /* tighter */
   }

    /* Tight heading rhythm */
    .post-content :global(h1),
    .post-content :global(h2),
    .post-content :global(h3) {
      margin-top: 1rem;
      margin-bottom: 0.25rem;
   }

   /* Paragraph rhythm */
    .post-content :global(p) {
      margin: 0.25rem 0 0.6rem;
   }

   /* Extra tight when paragraph follows heading */
   .post-content :global(h1 + p),
   .post-content :global(h2 + p),
   .post-content :global(h3 + p) {
     margin-top: 0.15rem;
   }

    .post-content :global(strong) {
      color: var(--bold-text-color);
      font-weight: 600;
    }

    .post-content :global(em) {
      color: var(--italic-text-color);
      font-style: italic;
    }

    .post-content :global(a) {
      color: var(--color-accent);
      text-decoration: underline;
      transition: color 0.3s ease;
    }

    .post-content :global(a:hover) {
      color: var(--color-accent-bright);
    }

    .post-content :global(ul),
    .post-content :global(ol) {
      margin: 1.5rem 0;
      padding-left: 2rem;
    }

    .post-content :global(li) {
      margin-bottom: 0.75rem;
    }

    .post-content :global(blockquote) {
      border-left: 4px solid var(--color-accent);
      padding: 1rem 1.5rem;
      margin: 2rem 0;
      background-color: var(--color-bg-secondary);
      font-style: italic;
      color: var(--color-text-muted);
    }

    .post-content :global(code) {
      background-color: var(--color-bg-secondary);
      padding: 0.2rem 0.4rem;
      border-radius: 4px;
      font-size: 0.9em;
      color: var(--color-accent-bright);
      font-family: "Courier New", monospace;
    }

    .post-content :global(pre) {
      background-color: var(--color-bg-secondary);
      padding: 1.5rem;
      border-radius: 8px;
      overflow-x: auto;
      margin: 2rem 0;
      border: 1px solid var(--color-border);
    }

    .post-content :global(pre code) {
      background: none;
      padding: 0;
      color: var(--color-text);
    }

    .post-content :global(hr) {
      border: none;
      border-top: 1px solid var(--color-border);
      margin: 3rem 0;
    }

    #progress-bar {
      position: fixed;
      top: 0;
      left: 0;
      height: 8px;
      background: linear-gradient(
        90deg,
        #9a2dfe 10%,
        #9a2dfe 25%,
        #f6f65a 38%,
        #e019d4 65%,
        #00dbff 100%
      );
      width: 0%;
      z-index: 9999;
      transition: width 0.1s ease;
    }

   @media (max-width: 920px) {
  .post-title {
    font-size: 2rem;
  }

  /* tighter reading on mobile */
  .post-content {
    font-size: 0.95rem;
    line-height: 1.35;
  }

  /* kill the "first line bold" spacing trick */
  .post-content :global(p > strong:first-child) {
    display: block;
    margin-bottom: 0.15rem;
  }

  /* paragraphs: small, controlled spacing */
  .post-content :global(p) {
    margin-top: 0.2rem;
    margin-bottom: 0.55rem;
  }

  /* heading → first paragraph: even tighter */
  .post-content :global(h1 + p),
  .post-content :global(h2 + p),
  .post-content :global(h3 + p) {
    margin-top: 0.1rem;
  }
}
  </style>

  <script>
    function updateProgressBar() {
      const progressBar = document.getElementById("progress-bar");
      const windowHeight = window.innerHeight;
      const documentHeight =
        document.documentElement.scrollHeight - windowHeight;
      const scrolled = window.scrollY;
      const progress = (scrolled / documentHeight) * 100;

      if (progressBar) progressBar.style.width = progress + "%";
    }

    window.addEventListener("scroll", updateProgressBar);
    updateProgressBar();
  </script>