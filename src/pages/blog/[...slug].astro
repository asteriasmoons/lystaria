---
 // src/pages/blog/[...slug].astro
 // @ts-nocheck
import { getCollection } from "astro:content";
import type { CollectionEntry } from "astro:content";
import BaseLayout from "../../layouts/BaseLayout.astro";
import Comments from "../../components/Comments.astro";

export const prerender = true;

export async function getStaticPaths() {
  const posts = await getCollection("posts");
  return posts.map((post: CollectionEntry<"posts">) => ({
    params: { slug: post.slug },
    props: { post },
  }));
}
 
interface Props {
  post: CollectionEntry<"posts">;
}

const { post } = Astro.props;
const { Content } = await post.render();

const formattedDate = new Date(post.data.pubDate).toLocaleDateString("en-US", {
  year: "numeric",
  month: "long",
  day: "numeric",
});
---

<BaseLayout
  title={post.data.title + " Â· Lystaria"}
  description={post.data.description}
  image={post.data.coverImage || "/banner.png"}
  type="article"
>
  <div id="progress-bar"></div>

  <script
    type="application/ld+json"
    set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "BlogPosting",
      headline: post.data.title,
      description: post.data.description,
      author: { "@type": "Person", name: "Asteria" },
      datePublished: post.data.pubDate.toISOString(),
      url: `https://lystaria.im/blog/${post.slug}`,
    })}
  />

    <header class="post-header">
      <h1 class="post-title">{post.data.title}</h1>

      <div class="post-meta">
        <time datetime={post.data.pubDate.toISOString()}>{formattedDate}</time>

        {post.data.tags && (
          <div class="post-tags">
            {post.data.tags.map((tag) => (
              <a href={`/blog/tag/${tag}`} class="tag-link">
                <span class="tag">{tag}</span>
              </a>
            ))}
          </div>
        )}
        </div>
    </header>

    <div class="post-content">
      <Content />
    </div>

    <Comments />
  </BaseLayout>

  <style is:global>
    /* ===========================================
       BLOG POST STYLES
       All in one place. No :global() wrappers needed
       because the <style> tag itself is is:global.
       =========================================== */

    /* --- Header --- */
    .post-header {
      text-align: center;
      margin-bottom: 0;
      padding-bottom: 0;
    }

    .post-title {
      font-size: 2.5rem;
      margin-bottom: 1rem;
      line-height: 1.2;
    }

    .post-meta {
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: 1rem;
      color: var(--color-text-muted);
      font-size: 0.95rem;
    }

    /* --- Tags (scoped to blog post, not cards) --- */
    .post-header .post-tags {
      display: flex;
      gap: 0.5rem;
      flex-wrap: wrap;
      justify-content: center;
    }

    .post-header .tag {
      background-color: var(--overlay-gradient-accent);
      color: var(--color-accent);
      padding: 0.25rem 0.75rem;
      border-radius: 20px;
      font-size: 0.85rem;
      border: 1px solid var(--color-border);
    }

    .tag-link {
      text-decoration: none;
    }

    .tag-link:hover .tag {
      background-color: var(--gradient-accent);
      color: var(--color-bg);
      transform: translateY(-2px);
    }

    /* --- Post content area --- */
    .post-content {
      font-size: 0.95rem;
      line-height: 1.65;
    }

    /* --- Headings inside post content ---
         Override global.css heading padding/margin.
         These need to beat (0,0,1) from global, and they do at (0,1,1). */
    .post-content h1,
    .post-content h2,
    .post-content h3,
    .post-content h4,
    .post-content h5,
    .post-content h6 {
      padding: 0;
      margin: 1.95rem 0 0.2rem;
    }

    /* --- Paragraphs --- */
    .post-content p {
      margin: 0.65rem 0 0.6rem;
    }

    /* Paragraph right after a heading: minimal gap */
    .post-content h1 + p,
    .post-content h2 + p,
    .post-content h3 + p,
    .post-content h4 + p {
      margin-top: 0;
    }

    /* Paragraph right after a gradient-divider:
       your markdown has <div class="gradient-divider"> between sections,
       which breaks h3 + p adjacency. Handle it: */
    .post-content .gradient-divider + h3,
    .post-content .gradient-divider + h2 {
      margin-top: 0.75rem;
    }

    .post-content .gradient-divider {
      margin: 0.75rem 0;
    }

    /* --- Inline styles --- */
    .post-content strong {
      color: var(--bold-text-color);
      font-weight: 600;
    }

    .post-content em {
      color: var(--italic-text-color);
      font-style: italic;
    }

    .post-content a {
      color: var(--color-accent);
      text-decoration: underline;
      transition: color 0.3s ease;
    }

    .post-content a:hover {
      color: var(--color-accent-bright);
    }

    /* --- Lists --- */
    .post-content ul,
    .post-content ol {
      margin: 0.75rem 0;
      padding-left: 2rem;
    }

    .post-content li {
      margin-bottom: 0.4rem;
    }

    /* --- Blockquotes --- */
    .post-content blockquote {
      border-left: 4px solid var(--color-accent);
      padding: 1rem 1.5rem;
      margin: 1.5rem 0;
      background-color: var(--color-bg-secondary);
      font-style: italic;
      color: var(--color-text-muted);
    }

    /* --- Code --- */
    .post-content code {
      background-color: var(--color-bg-secondary);
      padding: 0.2rem 0.4rem;
      border-radius: 4px;
      font-size: 0.9em;
      color: var(--color-accent-bright);
      font-family: "Courier New", monospace;
    }

    .post-content pre {
      background-color: var(--color-bg-secondary);
      padding: 1.5rem;
      border-radius: 8px;
      overflow-x: auto;
      margin: 1.5rem 0;
      border: 1px solid var(--color-border);
    }

    .post-content pre code {
      background: none;
      padding: 0;
      color: var(--color-text);
    }

    /* --- Horizontal rules --- */
    .post-content hr {
      border: none;
      border-top: 1px solid var(--color-border);
      margin: 2rem 0;
    }

    /* --- Progress bar --- */
    #progress-bar {
      position: fixed;
      top: 0;
      left: 0;
      height: 8px;
      background: linear-gradient(
        90deg,
        #9a2dfe 10%,
        #9a2dfe 25%,
        #f6f65a 38%,
        #e019d4 65%,
        #00dbff 100%
      );
      width: 0%;
      z-index: 9999;
      transition: width 0.1s ease;
    }

    /* ===========================================
       MOBILE
       =========================================== */
    @media (max-width: 920px) {
      .post-title {
        font-size: 2rem;
      }

      .post-content {
        font-size: 0.95rem;
        line-height: 1.55;
      }

      .post-content p {
        margin: 0.35rem 0 0.45rem;
      }

      .post-content h1 + p,
      .post-content h2 + p,
      .post-content h3 + p {
        margin-top: 0;
      }

      .post-content h1,
      .post-content h2,
      .post-content h3,
      .post-content h4,
      .post-content h5,
      .post-content h6 {
        padding: 0;
        margin: 1rem 0 0.15rem;
      }
    }
  </style>

  <script>
    function updateProgressBar() {
      const progressBar = document.getElementById("progress-bar");
      const windowHeight = window.innerHeight;
      const documentHeight =
        document.documentElement.scrollHeight - windowHeight;
      const scrolled = window.scrollY;
      const progress = (scrolled / documentHeight) * 100;

      if (progressBar) progressBar.style.width = progress + "%";
    }

    window.addEventListener("scroll", updateProgressBar);
    updateProgressBar();
  </script>
