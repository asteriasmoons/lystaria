    <!-- Additional helpful info -->
    <p class="invite-info">
      By joining, you agree to follow our community guidelines and Discord's
      Terms of Service.
    </p>
  </div>
</BaseLayout>

<style>
  /* ====================================
     MAIN PAGE CONTAINER
     ==================================== */
  .discord-page {
    max-width: 800px; /* Keep content readable width */
    margin: 0 auto; /* Center the page */
    padding: 2rem 1.5rem; /* Breathing room on all sides */
  }

  /* ====================================
     HERO SECTION
     ==================================== */
  .hero {
    text-align: center;
    margin-bottom: 3rem;
  }

  /* Subtitle under the main heading */
  .subtitle {
    font-size: 0.75rem;
    line-height: 1.7;
    color: rgba(255, 255, 255, 0.909); /* Slightly dimmed white */
    max-width: 600px; /* Keep lines readable */
    margin: 0 auto; /* Center it */
  }

  /* ====================================
     SERVER INFO SECTION
     ==================================== */
  .server-info {
    text-align: center;
  }

  .description {
    max-width: 700px;
    margin: 3rem auto 0;
    padding: 2rem;
    border: 2px dotted transparent; /* Set to transparent */
    border-image: var(--gradient-accent) 1; /* Add this */
    border-radius: 8px; /* This won't work with border-image unfortunately */
    font-size: 0.85rem;
    color: #ffffff;
  }

  /* ====================================
     INVITE BUTTON SECTION
     ==================================== */
  .invite-section {
    text-align: center;
    margin-top: 4rem;
  }

  .invite-description {
    font-size: 0.95rem;
    color: rgba(255, 255, 255, 0.8);
    margin-bottom: 2rem;
    max-width: 500px;
    margin-left: auto;
    margin-right: auto;
  }

  /* ====================================
     DISCORD INVITE BUTTON
     ==================================== */
  .discord-button {
    display: inline-flex; /* Allows icon + text to sit side by side */
    align-items: center; /* Vertically center icon and text */
    gap: 0.75rem; /* Space between icon and text */

    /* Button styling */
    padding: 1rem 2rem;
    font-size: 1.1rem;
    font-weight: 600;
    border-radius: 10px;
    /* Gradient background (your signature colors) */
    background: var(--overlay-gradient-accent);
    /* Border with gradient feel */
    border: none;
    /* Text color */
    color: #ffffff;
    /* Smooth transitions on hover */
    transition: all 0.3s ease;
    /* Remove default link underline */
    text-decoration: none;
    /* Cursor changes to pointer on hover */
    cursor: pointer;
    /* Subtle shadow */
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.3);
  }

  /* Button hover effect */
  .discord-button:hover {
    /* Brighten background on hover */
    background: var(--gradient-accent);
    /* Lift button slightly */
    transform: translateY(-2px);
    /* Enhance shadow */
    box-shadow:
      0 6px 20px rgba(0, 0, 0, 0.4),
      0 0 30px rgba(90, 200, 250, 0.3); /* Cyan glow */
  }

  /* Button active/pressed state */
  .discord-button:active {
    transform: translateY(0); /* Return to normal position */
  }

  /* Discord icon styling */
  .discord-icon {
    width: 24px;
    height: 24px;
    flex-shrink: 0; /* Prevents icon from squishing */
  }

  /* Info text below button */
  .invite-info {
    margin-top: 1.5rem;
    font-size: 0.85rem;
    color: rgba(255, 255, 255, 0.5); /* Very dim text */
    font-style: italic;
  }

  /* ====================================
     RESPONSIVE DESIGN (Mobile)
     ==================================== */
  @media (max-width: 768px) {
    /* Smaller subtitle */
    .subtitle {
      font-size: 0.95rem;
    }

    /* Adjust button padding on mobile */
    .discord-button {
      padding: 0.9rem 1.5rem;
      font-size: 1rem;
    }
  }
</style>
