---
// Import your base layout (handles nav, footer, fonts, meta tags)
import BaseLayout from "../layouts/BaseLayout.astro";
import GradientDivider from "../components/GradientDivider.astro";

// Page metadata - customize these!
const pageTitle = "Discord - Lystaria";
const pageDescription = "Join our diverse community on Discord";
---

<BaseLayout title={pageTitle} description={pageDescription}>
  <!-- Main Discord Page Container -->
  <div class="discord-page">
    <!-- Hero Section -->
    <section class="hero">
      <h1>Discord ✦ Lystaria</h1>
      <p class="subtitle">
        An intentional space for growth, creativity, and shared meaning.
      </p>
    </section>

    <GradientDivider />

    <!-- INFO ABOUT THE SERVER -->
    <section class="server-info">
      <p class="description">This is where the main text shall go.</p>
    </section>

    <GradientDivider />

    <!-- Invite Button Section -->
    <section class="invite-section">
      <h3>Ready to Join?</h3>
      <p class="invite-description">
        <!-- CUSTOMIZE THIS: Add more details about joining -->
        Click the button below to get your invite link and become part of our community.
      </p>

      <!-- Discord Invite Button -->
      <!-- CUSTOMIZE THIS: Replace YOUR_INVITE_LINK with your actual Discord 
invite URL -->
      <!-- To create an invite: Right-click your server → Invite People → Create 
custom link -->

      href="https://discord.gg/aggfkxkBjW" class="discord-button"
      target="_blank" rel="noopener noreferrer" >
      <svg
        class="discord-icon"
        width="24"
        height="24"
        viewBox="0 0 127.14 96.36"
        fill="currentColor"
