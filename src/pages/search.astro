---
// @ts-nocheck
// Search page
import BaseLayout from "../layouts/BaseLayout.astro";
import { getCollection } from "astro:content";

// Get all posts for searching
const allPosts = await getCollection("posts");
const sortedPosts = allPosts.sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);

// Pass posts as JSON to the client
const postsData = sortedPosts.map((post) => ({
  slug: post.slug,
  title: post.data.title,
  description: post.data.description,
  tags: post.data.tags || [],
  pubDate: post.data.pubDate.toISOString(),
}));
---

<BaseLayout
  title="Search · Lystaria"
  description="Search through all blog posts on Lystaria"
  image="/banner.png"
  type="website"
>
  <div class="container-wide">
    <header class="search-header">
      <h1>Search the Grimoire</h1>
      <p class="search-intro">Find posts by title, description, or tags</p>

      <div class="search-box">
        <input
          type="text"
          id="search-input"
          placeholder="Type to search..."
          autofocus
        />
        <img
          class="search-icon"
          src="/icons/search.svg"
          alt=""
          aria-hidden="true"
        />
      </div>
    </header>

    <div id="search-results" class="posts-grid"></div>

    <div id="no-results" class="no-results" style="display: none;">
      <p>✨ No posts found. Try different keywords.</p>
    </div>

    <div id="all-posts" class="posts-grid">
      {
        sortedPosts.map((post) => {
          const formattedDate = new Date(post.data.pubDate).toLocaleDateString(
            "en-US",
            {
              year: "numeric",
              month: "long",
              day: "numeric",
            }
          );

          return (
            <article class="post-card">
              <a href={`/blog/${post.slug}`} class="post-link">
                <div class="post-header">
                  <h2>{post.data.title}</h2>
                  <time
                    class="post-date"
                    datetime={post.data.pubDate.toISOString()}
                  >
                    {formattedDate}
                  </time>
                </div>

                <p class="post-description">{post.data.description}</p>

                <div class="read-more">Read more →</div>
              </a>

              {post.data.tags && post.data.tags.length > 0 && (
                <div class="post-tags">
                  {post.data.tags.map((tag) => (
                    <a href={`/blog/tag/${tag}`} class="tag">
                      {tag}
                    </a>
                  ))}
                </div>
              )}
            </article>
          );
        })
      }
    </div>
  </div>

  <style>
    .container-wide {
      max-width: 1200px;
      margin: 0 auto;
      padding: 0 2rem 4rem;
    }

    .search-header {
      text-align: center;
      padding: 3rem 0;
      border-bottom: 1px solid var(--color-border);
      margin-bottom: 4rem;
    }

    .search-intro {
      color: var(--color-text-muted);
      font-size: 1.1rem;
      margin-bottom: 2rem;
    }

    .search-box {
      position: relative;
      max-width: 600px;
      margin: 0 auto;
    }

    #search-input {
      width: 100%;
      padding: 1rem 3rem 1rem 1.5rem;
      background-color: var(--color-bg-secondary);
      border: 2px solid var(--color-border);
      border-radius: 50px;
      color: var(--color-text);
      font-size: 1rem;
      font-family: "Delius Swash Caps", cursive;
      transition: border-color 0.3s ease;
    }

    #search-input:focus {
      outline: none;
      border-color: var(--color-accent);
    }

    #search-input::placeholder {
      color: var(--color-text-muted);
    }

    .search-icon {
      position: absolute;
      right: 1.5rem;
      top: 50%;
      transform: translateY(-50%);
      width: 20px;
      height: 20px;
      pointer-events: none;
      opacity: 0.8;
    }

    .posts-grid {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
      gap: 2rem;
    }

    .post-card {
      background: linear-gradient(
        135deg,
        rgba(126, 126, 255) 0%,
        rgba(90, 200, 250) 50%,
        rgba(10, 10, 15, 1) 100%
      );
      border: 1px solid var(--color-border);
      border-radius: 8px;
      transition: all 0.3s ease;
      overflow: hidden;
      height: 100%;
    }

    .post-card:hover {
      transform: translateY(-6px);
      border-color: var(--color-accent);
      box-shadow: 0 8px 24px rgba(167, 139, 250, 0.15);
    }

    .post-link {
      display: flex;
      flex-direction: column;
      flex-grow: 1;
      padding: 2rem 2rem 1rem 2rem;
      color: inherit;
      text-decoration: none;
    }

    .post-header {
      margin-bottom: 1rem;
    }

    .post-card h2 {
      font-size: 1.5rem;
      margin-bottom: 0.5rem;
      line-height: 1.3;

      /* override global gradient heading theme */
      background: none !important;
      -webkit-background-clip: initial !important;
      background-clip: initial !important;

      -webkit-text-fill-color: #ffffff !important; /* Safari/Chrome */
      color: #ffffff !important; /* fallback */

      display: block !important;
    }

    .post-date {
      display: block;
      color: rgba(255, 255, 255, 0.7);
      font-size: 0.9rem;
      font-style: italic;
    }

    .post-description {
      color: rgba(255, 255, 255, 0.85);
      line-height: 1.7;
      margin-bottom: 1.5rem;
      flex-grow: 1;
    }

    .post-tags {
      display: flex;
      gap: 0.5rem;
      flex-wrap: wrap;
      padding: 0 2rem 2rem 2rem;
    }

    .tag {
      background-color: var(--color-bg);
      color: var(--color-accent);
      padding: 0.25rem 0.75rem;
      border-radius: 20px;
      font-size: 0.85rem;
      border: 1px solid var(--color-border);
      text-decoration: none;
      transition: all 0.3s ease;
    }

    .tag:hover {
      background-color: var(--color-accent);
      color: var(--color-bg);
      transform: translateY(-2px);
    }

    .read-more {
      color: #ffffff;
      font-size: 0.95rem;
      font-weight: 500;
      margin-top: auto;
      transition: color 0.3s ease;
    }

    .post-card:hover .read-more {
      color: rgba(255, 255, 255, 0.7);
    }

    .no-results {
      text-align: center;
      padding: 4rem 0;
      color: var(--color-text-muted);
      font-size: 1.2rem;
    }

    @media (max-width: 768px) {
      .search-header h1 {
        font-size: 2rem;
      }

      .posts-grid {
        grid-template-columns: 1fr;
      }
    }
  </style>

  <script define:vars={{ postsData }}>
    const searchInput = document.getElementById("search-input");
    const searchResults = document.getElementById("search-results");
    const noResults = document.getElementById("no-results");
    const allPosts = document.getElementById("all-posts");

    function formatDate(isoDate) {
      return new Date(isoDate).toLocaleDateString("en-US", {
        year: "numeric",
        month: "long",
        day: "numeric",
      });
    }

    function createPostCard(post) {
      const tagsHTML =
        post.tags && post.tags.length > 0
          ? `<div class="post-tags">
            ${post.tags
              .map((tag) => `<a href="/blog/tag/${tag}" class="tag">${tag}</a>`)
              .join("")}
           </div>`
          : "";

      return `
        <article class="post-card">
          <a href="/blog/${post.slug}" class="post-link">
            <div class="post-header">
              <h2>${post.title}</h2>
              <time class="post-date" datetime="${post.pubDate}">
                ${formatDate(post.pubDate)}
              </time>
            </div>
            <p class="post-description">${post.description}</p>
            <div class="read-more">Read more →</div>
          </a>
          ${tagsHTML}
        </article>
      `;
    }

    function searchPosts(query) {
      if (!query.trim()) {
        // Show all posts when search is empty
        searchResults.innerHTML = "";
        searchResults.style.display = "none";
        noResults.style.display = "none";
        allPosts.style.display = "grid";
        return;
      }

      const lowerQuery = query.toLowerCase();
      const results = postsData.filter((post) => {
        const titleMatch = post.title.toLowerCase().includes(lowerQuery);
        const descMatch = post.description.toLowerCase().includes(lowerQuery);
        const tagsMatch = post.tags.some((tag) =>
          tag.toLowerCase().includes(lowerQuery)
        );
        return titleMatch || descMatch || tagsMatch;
      });

      // Hide all posts section
      allPosts.style.display = "none";

      if (results.length === 0) {
        searchResults.innerHTML = "";
        searchResults.style.display = "none";
        noResults.style.display = "block";
      } else {
        searchResults.innerHTML = results.map(createPostCard).join("");
        searchResults.style.display = "grid";
        noResults.style.display = "none";
      }
    }

    searchInput.addEventListener("input", (e) => {
      searchPosts(e.target.value);
    });
  </script>
</BaseLayout>
