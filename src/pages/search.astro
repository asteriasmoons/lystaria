---
// @ts-nocheck
// Search page
import BaseLayout from "../layouts/BaseLayout.astro";
import { getCollection } from "astro:content";
import GradientDivider from "../components/GradientDivider.astro";

// Get all posts for searching
const allPosts = await getCollection("posts");
const sortedPosts = allPosts.sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);

// Pass posts as JSON to the client
const postsData = sortedPosts.map((post) => ({
  slug: post.slug,
  title: post.data.title,
  description: post.data.description,
  tags: post.data.tags || [],
  pubDate: post.data.pubDate.toISOString(),
}));
---

<BaseLayout
  title="Search · Lystaria"
  description="Search through all blog posts on Lystaria"
  image="/banner.png"
  type="website"
>
  <section class="search-hero search-page">
    <header class="search-header">
      <h1>Search the Grimoire</h1>
      <p class="search-intro">Find posts by title, description, or tags</p>

      <div class="search-box">
        <input
          type="text"
          id="search-input"
          placeholder="Type to search..."
          autofocus
        />
        <img
          class="search-icon"
          src="/icons/search.svg"
          alt=""
          aria-hidden="true"
        />
      </div>
    </header>
  </section>

  <GradientDivider />

  <section id="results-section" class="search-results search-page" style="display:none;">
    <div id="search-results" class="posts-grid" style="display: none;"></div>

    <div id="no-results" class="no-results" style="display: none;">
      <p>No posts found. Try different keywords.</p>
    </div>
  </section>

  <section class="search-all search-page">
    <div id="all-posts" class="posts-grid">
      {
        sortedPosts.map((post) => {
          const formattedDate = new Date(post.data.pubDate).toLocaleDateString(
            "en-US",
            {
              year: "numeric",
              month: "long",
              day: "numeric",
            }
          );

          return (
            <div class="post-card post-card--search">
              <div class="post-body">
                <a href={`/blog/${post.slug}`} class="post-link">
                  <div class="postcard-content">
                    <div class="post-header">
                      <h2>{post.data.title}</h2>
                      <time
                        class="post-date"
                        datetime={post.data.pubDate.toISOString()}
                      >
                        {formattedDate}
                      </time>
                    </div>

                    <p class="post-description">{post.data.description}</p>

                    <div class="read-more">Read more →</div>
                  </div>
                </a>

                {post.data.tags && post.data.tags.length > 0 && (
                  <div class="post-tags">
                    {post.data.tags.map((tag) => (
                      <a href={`/blog/tag/${tag}`} class="tag">
                        {tag}
                      </a>
                    ))}
                  </div>
                )}
              </div>
            </div>
          );
        })
      }
    </div>
  </section>

  <script define:vars={{ postsData }}>
    const searchInput = document.getElementById("search-input");
    const searchResults = document.getElementById("search-results");
    const noResults = document.getElementById("no-results");
    const allPosts = document.getElementById("all-posts");
    const resultsSection = document.getElementById("results-section");

    function formatDate(isoDate) {
      return new Date(isoDate).toLocaleDateString("en-US", {
        year: "numeric",
        month: "long",
        day: "numeric",
      });
    }

    function createPostCard(post) {
      const tagsHTML =
        post.tags && post.tags.length > 0
          ? `<div class="post-tags">
              ${post.tags
                .map(
                  (tag) => `<a href="/blog/tag/${tag}" class="tag">${tag}</a>`
                )
                .join("")}
            </div>`
          : "";

      const formattedDate = formatDate(post.pubDate);

      return `
        <div class="post-card post-card--search">
          <div class="post-body">
            <a href="/blog/${post.slug}" class="post-link">
              <div class="post-content">
                <div class="post-header">
                  <h2>${post.title}</h2>
                  <time class="post-date" datetime="${post.pubDate}">
                    ${formattedDate}
                  </time>
                </div>

                <p class="post-description">${post.description}</p>
                <div class="read-more">Read more →</div>
              </div>
            </a>
            ${tagsHTML}
          </div>
        </div>
      `;
    }

    function searchPosts(query) {
      if (!query.trim()) {
  resultsSection.style.display = "none";
  searchResults.innerHTML = "";
  searchResults.style.display = "none";
  noResults.style.display = "none";
  allPosts.style.display = "grid";
  return;
}

resultsSection.style.display = "block";

      const lowerQuery = query.toLowerCase();
      const results = postsData.filter((post) => {
        const titleMatch = post.title.toLowerCase().includes(lowerQuery);
        const descMatch = post.description.toLowerCase().includes(lowerQuery);
        const tagsMatch = post.tags.some((tag) =>
          tag.toLowerCase().includes(lowerQuery)
        );
        return titleMatch || descMatch || tagsMatch;
      });

      allPosts.style.display = "none";

      if (results.length === 0) {
        searchResults.innerHTML = "";
        searchResults.style.display = "none";
        noResults.style.display = "block";
      } else {
        searchResults.innerHTML = results.map(createPostCard).join("");
        searchResults.style.display = "grid";
        noResults.style.display = "none";
      }
    }

    searchInput.addEventListener("input", (e) => {
      searchPosts(e.target.value);
    });
  </script>
</BaseLayout>

<style is:global>
  /* variables scoped to this page wrapper */
  .search-page {
    --card-radius: 12px;
    --card-pad: 1.25rem;
    --stack-gap: 0.75rem;
    padding-inline: 1.25rem;
  }

  /* =========================
     NEW SECTION HOOKS (added in markup)
     ========================= */
  .search-page.search-hero,
  .search-page.search-results,
  .search-page.search-all {
    width: 100%;
  }

  /* give the top section breathing room without crushing sides */
.search-page.search-hero {
  padding-top: 2rem;
  padding-bottom: 0.5rem;
}

  /* all-posts area spacing */
  .search-page.search-all {
  padding-bottom: 2rem;
}

  /* =========================
     HEADER + SEARCH BOX
     ========================= */
  .search-page .search-header {
    text-align: center;
    border-bottom: none;
    margin-bottom: 1.25rem;
  }

  .search-page .search-intro {
    color: var(--color-text-muted);
    font-size: 1.1rem;
    margin-bottom: 0.5rem;
  }
  
  .search-page.search-results {
  padding: 0 !important;
  margin: 0 !important;
  min-height: 0 !important;
}

  .search-page .search-box {
    position: relative;
    max-width: 900px;
    margin: 0 auto 1.5rem;
  }

  .search-page #search-input {
    width: 100%;
    /*
      This padding is intentional:
      - right padding (3rem) keeps your typed text from going underneath the icon
      - left padding (1.5rem) keeps text comfy from the edge
    */
    padding: 1rem 3rem 1rem 1.5rem;
    background-color: var(--color-bg-secondary);
    border: 2px solid var(--color-border);
    border-radius: 50px;
    color: var(--color-text);
    font-size: 1rem;
    font-family: "Berkshire Swash", serif;
    transition: border-color 0.3s ease;
  }

  .search-page #search-input:focus {
    outline: none;
    border-color: var(--color-accent);
  }

  .search-page #search-input::placeholder {
    color: var(--bold-text-color);
  }

  .search-page .search-icon {
    position: absolute;
    right: 1.5rem;
    top: 50%;
    transform: translateY(-50%);
    width: 20px;
    height: 20px;
    pointer-events: none;
    opacity: 0.8;
  }

  .search-page .no-results {
    text-align: center;
    padding: 4rem 0;
    color: var(--color-text-muted);
    font-size: 1.2rem;
  }

  /* =========================
     MOBILE SETTINGS
     ========================= */
  @media (max-width: 1100px) {
    .search-page {
      padding-inline: 1.25rem; /* ← slightly more than before */
      --card-pad: 1rem;
    }

    .search-page.search-hero {
      padding-top: 1.5rem;
      padding-bottom: 2rem;
    }

    .search-page .search-header h1 {
      font-size: 2rem;
    }
  }
</style>