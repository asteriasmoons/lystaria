---
// @ts-nocheck
// Search page
import BaseLayout from "../layouts/BaseLayout.astro";
import { getCollection } from "astro:content";
import GradientDivider from '../components/GradientDivider.astro'

// Get all posts for searching
const allPosts = await getCollection("posts");
const sortedPosts = allPosts.sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);

// Pass posts as JSON to the client
const postsData = sortedPosts.map((post) => ({
  slug: post.slug,
  title: post.data.title,
  description: post.data.description,
  tags: post.data.tags || [],
  pubDate: post.data.pubDate.toISOString(),
}));
---

<BaseLayout
  title="Search Â· Lystaria"
  description="Search through all blog posts on Lystaria"
  image="/banner.png"
  type="website"
>
  <section class="search-hero search-page">
    <header class="search-header">
      <h1>Search the Grimoire</h1>
      <p class="search-intro">Find posts by title, description, or tags</p>

      <div class="search-box">
        <input
          type="text"
          id="search-input"
          placeholder="Type to search..."
          autofocus
        />
        <img
          class="search-icon"
          src="/icons/search.svg"
          alt=""
          aria-hidden="true"
        />
      </div>
    </header>
  </section>
  
  <GradientDivider />

  <section class="search-results">
    <div id="search-results" class="posts-grid" style="display: none;"></div>

    <div id="no-results" class="no-results" style="display: none;">
      <p>No posts found. Try different keywords.</p>
    </div>
  </section>

  <section class="search-all">
    <div id="all-posts" class="posts-grid">
      {
        sortedPosts.map((post) => {
          const formattedDate = new Date(post.data.pubDate).toLocaleDateString(
            "en-US",
            {
              year: "numeric",
              month: "long",
              day: "numeric",
            }
          );

          return (
            <article class="post-card post-card--search">
              <div class="post-body">
                <a href={`/blog/${post.slug}`} class="post-link">
                  <div class="post-content">
                    <div class="post-header">
                      <h2>{post.data.title}</h2>
                      <time
                        class="post-date"
                        datetime={post.data.pubDate.toISOString()}
                      >
                        {formattedDate}
                      </time>
                    </div>

                    <p class="post-description">{post.data.description}</p>

                    <div class="read-more">Read more â†’</div>
                  </div>
                </a>

                {post.data.tags && post.data.tags.length > 0 && (
                  <div class="post-tags">
                    {post.data.tags.map((tag) => (
                      <a href={`/blog/tag/${tag}`} class="tag">
                        {tag}
                      </a>
                    ))}
                  </div>
                )}
              </div>
            </article>
          );
        })
      }
    </div>
  </section>

<style is:global>
  /* variables scoped to this page wrapper */
  .search-page {
    --card-radius: 12px;
    --card-pad: 1.25rem;
    --stack-gap: 0.75rem;

    /* ðŸ‘‡ ADDITION: tiny left/right padding for this page only */
    /* gives breathing room without acting like a container */
    padding-inline: 1.25rem;
  }

  /* =========================
     NEW SECTION HOOKS (added in markup)
     ========================= */
  .search-page.search-hero,
  .search-page.search-results,
  .search-page.search-all {
    width: 100%;
  }

  /* give the top section breathing room without crushing sides */
  .search-page.search-hero {
    padding-top: 2rem;
    padding-bottom: 2.5rem;
  }

  /* results area spacing */
  .search-page.search-results {
    padding-bottom: 1.5rem;
  }

  /* all-posts area spacing */
  .search-page.search-all {
    padding-bottom: 4rem;
  }

  /* =========================
     HEADER + SEARCH BOX
     ========================= */
  .search-page .search-header {
    text-align: center;
    border-bottom: 1px solid var(--color-border);
    margin-bottom: 3rem;
  }

  .search-page .search-intro {
    color: var(--color-text-muted);
    font-size: 1.1rem;
    margin-bottom: 2rem;
  }

  .search-page .search-box {
    position: relative;
    max-width: 900px;
    margin: 0 auto 3rem;
  }

  .search-page #search-input {
    width: 100%;
    /*
      This padding is intentional:
      - right padding (3rem) keeps your typed text from going underneath the icon
      - left padding (1.5rem) keeps text comfy from the edge
    */
    padding: 1rem 3rem 1rem 1.5rem;
    background-color: var(--color-bg-secondary);
    border: 2px solid var(--color-border);
    border-radius: 50px;
    color: var(--color-text);
    font-size: 1rem;
    font-family: "Berkshire Swash", serif;
    transition: border-color 0.3s ease;
  }

  .search-page #search-input:focus {
    outline: none;
    border-color: var(--color-accent);
  }

  .search-page #search-input::placeholder {
    color: var(--bold-text-color);
  }

  .search-page .search-icon {
    position: absolute;
    right: 1.5rem;
    top: 50%;
    transform: translateY(-50%);
    width: 20px;
    height: 20px;
    pointer-events: none;
    opacity: 0.8;
  }

  /* =========================
     GRID
     ========================= */
  .search-page .posts-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 2rem;
    justify-content: center;
    width: 100%;
  }

  /* =========================
     SEARCH PAGE POST CARDS (specific to this page)
     ========================= */
  .search-page .post-card {
    background: linear-gradient(
      150deg,
      #7e7eff 10%,
      #7e7eff 25%,
      #f6f65a 38%,
      #e019d4 65%,
      #00dbff 100%
    );
    background-clip: padding-box;
    border: 1px solid var(--color-border);
    border-radius: var(--card-radius);
    transition: all 0.3s ease;
    overflow: hidden;
    height: 100%;
    display: flex;
    flex-direction: column;
  }

  .search-page .post-card:hover {
    transform: translateY(-6px);
    border-color: var(--color-accent);
    box-shadow: 0 8px 24px rgba(167, 139, 250, 0.15);
  }

  .search-page .post-content {
    display: flex;
    flex-direction: column;
    gap: var(--stack-gap);
  }

  .search-page .post-body {
    flex: 1;
    display: flex;
    flex-direction: column;
    position: relative;
    padding: var(--card-pad);
  }

  .search-page .post-body::before {
    content: "";
    position: absolute;
    inset: 0;
    background: rgba(10, 10, 15, 0.45);
    pointer-events: none;
    z-index: 0;
    border-radius: var(--card-radius);
  }

  .search-page .post-body > * {
    position: relative;
    z-index: 1;
  }

  .search-page .post-link {
    flex: 1;
    flex-direction: column;
    display: flex;
    color: inherit;
    text-decoration: none;
  }

  .search-page .post-header {
    margin-bottom: 0.25rem;
  }

  .search-page .post-card h2 {
    font-size: 1.25rem;
    margin-bottom: 0.5rem;
    line-height: 1.3;
    background: none !important;
    -webkit-background-clip: initial !important;
    background-clip: initial !important;
    -webkit-text-fill-color: #ffffff !important;
    color: #ffffff !important;
    display: block !important;
  }

  .search-page .post-date {
    display: block;
    color: rgba(255, 255, 255, 0.7);
    font-size: 0.9rem;
    font-style: italic;
  }

  .search-page .post-description {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
    margin-bottom: 0.25rem;
    color: rgba(255, 255, 255, 0.85);
    line-height: 1.7;
  }

  .search-page .post-tags {
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
    padding: 0;
    margin-top: var(--stack-gap);
  }

  .search-page .tag {
    background-color: var(--color-bg);
    color: var(--color-accent);
    padding: 0.25rem 0.75rem;
    border-radius: 20px;
    font-size: 0.85rem;
    border: 1px solid var(--color-border);
    text-decoration: none;
    transition: all 0.3s ease;
  }

  .search-page .tag:hover {
    background-color: var(--color-accent);
    color: var(--color-bg);
    transform: translateY(-2px);
  }

  .search-page .read-more {
    color: #ffffff;
    font-size: 0.95rem;
    font-weight: 500;
    margin-top: auto;
    transition: color 0.3s ease;
  }

  .search-page .post-card:hover .read-more {
    color: rgba(255, 255, 255, 0.7);
  }

  .search-page .no-results {
    text-align: center;
    padding: 4rem 0;
    color: var(--color-text-muted);
    font-size: 1.2rem;
  }

  /* =========================
     MOBILE SETTINGS
     ========================= */
  @media (max-width: 1100px) {
    .search-page {
      /* ðŸ‘‡ slightly tighter padding on smaller screens */
      padding-inline: 1rem;
      --card-pad: 1rem;
    }

    .search-page.search-hero {
      padding-top: 1.5rem;
      padding-bottom: 2rem;
    }

    .search-page .search-header h1 {
      font-size: 2rem;
    }

    .search-page .posts-grid {
      grid-template-columns: 1fr;
    }

    .search-page #search-input {
      padding-right: 2.75rem;
    }
  }
</style>

  <script define:vars={{ postsData }}>
    const searchInput = document.getElementById("search-input");
    const searchResults = document.getElementById("search-results");
    const noResults = document.getElementById("no-results");
    const allPosts = document.getElementById("all-posts");

    function formatDate(isoDate) {
      return new Date(isoDate).toLocaleDateString("en-US", {
        year: "numeric",
        month: "long",
        day: "numeric",
      });
    }

    function createPostCard(post) {
      const tagsHTML =
        post.tags && post.tags.length > 0
          ? `<div class="post-tags">
              ${post.tags
                .map(
                  (tag) => `<a href="/blog/tag/${tag}" class="tag">${tag}</a>`
                )
                .join("")}
            </div>`
          : "";

      const formattedDate = formatDate(post.pubDate);

      return `
        <article class="post-card post-card--search">
          <div class="post-body">
            <a href="/blog/${post.slug}" class="post-link">
              <div class="post-content">
                <div class="post-header">
                  <h2>${post.title}</h2>
                  <time class="post-date" datetime="${post.pubDate}">
                    ${formattedDate}
                  </time>
                </div>

                <p class="post-description">${post.description}</p>
                <div class="read-more">Read more â†’</div>
              </div>
            </a>
            ${tagsHTML}
          </div>
        </article>
      `;
    }

    function searchPosts(query) {
      if (!query.trim()) {
        searchResults.innerHTML = "";
        searchResults.style.display = "none";
        noResults.style.display = "none";
        allPosts.style.display = "grid";
        return;
      }

      const lowerQuery = query.toLowerCase();
      const results = postsData.filter((post) => {
        const titleMatch = post.title.toLowerCase().includes(lowerQuery);
        const descMatch = post.description.toLowerCase().includes(lowerQuery);
        const tagsMatch = post.tags.some((tag) =>
          tag.toLowerCase().includes(lowerQuery)
        );
        return titleMatch || descMatch || tagsMatch;
      });

      allPosts.style.display = "none";

      if (results.length === 0) {
        searchResults.innerHTML = "";
        searchResults.style.display = "none";
        noResults.style.display = "block";
      } else {
        searchResults.innerHTML = results.map(createPostCard).join("");
        searchResults.style.display = "grid";
        noResults.style.display = "none";
      }
    }

    searchInput.addEventListener("input", (e) => {
      searchPosts(e.target.value);
    });
  </script>
</BaseLayout>
