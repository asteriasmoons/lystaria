---
import BaseLayout from "../layouts/BaseLayout.astro";

const pageTitle = "Updates";

// Optional: put the push meta in a comment block if you still want the workflow to parse it
/**
 * PUSH_META
 * title: New update
 * message: A fresh update is live -- tap to read.
 * PUSH_META_END
 */
---

<BaseLayout title={pageTitle}>
  <main class="container">
    <header class="page-header">
      <h1>Updates</h1>
      <p class="page-subtitle">
        Announcements, changes, and little milestones as Lystaria grows.
      </p>
    </header>

    <div class="gradient-divider"></div>

    <section class="updates-box">
      <h2 class="updates-title">Latest</h2>
      <p class="updates-body">
        Write your newest announcement here. You can replace this section each time,
        or append new entries below.
      </p>

      <div class="meta-row">
        <span class="meta-label">Published</span>
        <span class="meta-value">January 6, 2026</span>
      </div>
    </section>

  </main>

  <style>
    .page-header {
      max-width: 820px;
      margin: 0 auto 1.5rem;
      text-align: center;
    }

    .page-subtitle {
      max-width: 720px;
      margin: 0.75rem auto 0;
      opacity: 0.9;
      line-height: 1.6;
    }

    .updates-title {
      margin: 0 0 0.75rem;
    }

    .updates-body {
      margin: 0 0 1rem;
      line-height: 1.7;
    }
    
    .updates-box {
       max-width: 700px;
       margin: 3rem auto 0;
       padding: 2rem;
       border: 2px dotted transparent; /* Set to transparent */
       border-image: var(--gradient-accent) 1; /* Add this */
       border-radius: 8px; /* This won't work with border-image unfortunately */
       font-size: 0.85rem;
       color: #ffffff;
    }
      
    .meta-row {
      display: flex;
      gap: 0.75rem;
      opacity: 0.9;
      font-size: 0.95rem;
    }

    .meta-label {
      opacity: 0.8;
    }

    .updates-date {
      display: inline-block;
      min-width: 140px;
      opacity: 0.8;
    }

    .updates-text {
      opacity: 0.95;
    }
  </style>
</BaseLayout>