import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Home Â· Lystaria">
  <div class="container">
    <section class="hero">
      <h1>Welcome to Lystaria</h1>
      <p class="intro">
        Where the mystical meets the mundane. A space for exploring the magic woven into everyday lifeâ€”through personal growth, mental wellness, and the philosophies that shape us. Here, we honor both the cosmic and the practical, the spiritual and the human.
      </p>
      <div class="moon-phase" id="moon-phase">
        <span class="moon-icon">ðŸŒ™</span>
        <span class="moon-text">Calculating moon phase...</span>
      </div>
    </section>

    <section class="featured-posts">
      <h2>Latest Spells & Stories</h2>
      <div class="post-grid">
        <article class="post-card">
          <h3>Coming Soon</h3>
          <p class="post-date">Your first post awaits</p>
          <p>Stories of growth, magic, and the journey inward...</p>
        </article>
        <article class="post-card">
          <h3>Coming Soon</h3>
          <p class="post-date">More wisdom on the way</p>
          <p>Reflections on the mystical and the everyday...</p>
        </article>
      </div>
    </section>
  </div>

  <style>
    .hero {
      text-align: center;
      padding: 3rem 0 4rem;
      border-bottom: 1px solid var(--color-border);
    }

    .hero h1 {
      font-size: 3rem;
      margin-bottom: 1.5rem;
      background: linear-gradient(135deg, var(--color-accent), var(--color-accent-bright));
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
    }

    .intro {
      font-size: 1.2rem;
      color: var(--color-text-muted);
      max-width: 700px;
      margin: 0 auto 2rem;
      line-height: 1.8;
    }

    .moon-phase {
      display: inline-flex;
      align-items: center;
      gap: 0.75rem;
      padding: 1rem 1.5rem;
      background-color: var(--color-bg-secondary);
      border: 1px solid var(--color-border);
      border-radius: 50px;
      margin-top: 1rem;
    }

    .moon-icon {
      font-size: 1.5rem;
      animation: glow 3s ease-in-out infinite;
    }

    @keyframes glow {
      0%, 100% {
        opacity: 1;
        filter: drop-shadow(0 0 5px var(--color-accent));
      }
      50% {
        opacity: 0.8;
        filter: drop-shadow(0 0 15px var(--color-accent));
      }
    }

    .moon-text {
      font-size: 0.95rem;
      color: var(--color-accent-bright);
      letter-spacing: 0.05em;
    }

    .featured-posts {
      padding: 4rem 0;
    }

    .featured-posts h2 {
      text-align: center;
      margin-bottom: 3rem;
    }

    .post-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
      gap: 2rem;
    }

    .post-card {
      background-color: var(--color-bg-secondary);
      border: 1px solid var(--color-border);
      padding: 2rem;
      border-radius: 8px;
      transition: transform 0.3s ease, border-color 0.3s ease;
    }

    .post-card:hover {
      transform: translateY(-4px);
      border-color: var(--color-accent);
    }

    .post-card h3 {
      margin-bottom: 0.5rem;
    }

    .post-date {
      color: var(--color-text-muted);
      font-size: 0.9rem;
      font-style: italic;
      margin-bottom: 1rem;
    }

    @media (max-width: 768px) {
      .hero h1 {
        font-size: 2rem;
      }

      .intro {
        font-size: 1.1rem;
      }

      .post-grid {
        grid-template-columns: 1fr;
      }
    }
  </style>

  <script>
    // Moon phase calculator
    function getMoonPhase() {
      const today = new Date();
      let year = today.getFullYear();
      let month = today.getMonth() + 1;
      const day = today.getDate();
      
      // Calculate moon phase using astronomical algorithm
      let c = 0;
      let e = 0;
      let jd = 0;
      let b = 0;

      if (month < 3) {
        year--;
        month += 12;
      }

      ++month;
      c = 365.25 * year;
      e = 30.6 * month;
      jd = c + e + day - 694039.09;
      jd /= 29.5305882;
      b = Math.floor(jd);
      jd -= b;
      b = Math.round(jd * 8);

      if (b >= 8) {
        b = 0;
      }

      // Moon phase names and emojis
      const phases = [
        { name: 'New Moon', emoji: 'ðŸŒ‘' },
        { name: 'Waxing Crescent', emoji: 'ðŸŒ’' },
        { name: 'First Quarter', emoji: 'ðŸŒ“' },
        { name: 'Waxing Gibbous', emoji: 'ðŸŒ”' },
        { name: 'Full Moon', emoji: 'ðŸŒ•' },
        { name: 'Waning Gibbous', emoji: 'ðŸŒ–' },
        { name: 'Last Quarter', emoji: 'ðŸŒ—' },
        { name: 'Waning Crescent', emoji: 'ðŸŒ˜' }
      ];

      return phases[b];
    }

    // Update the moon phase display
    const moonPhaseEl = document.getElementById('moon-phase');
    if (moonPhaseEl) {
      const phase = getMoonPhase();
      moonPhaseEl.innerHTML = `
        <span class="moon-icon">${phase.emoji}</span>
        <span class="moon-text">Current Moon: ${phase.name}</span>
      `;
    }
  </script>
</BaseLayout>