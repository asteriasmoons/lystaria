---
// @ts-nocheck
// Homepage
import BaseLayout from "../layouts/BaseLayout.astro";
import { getCollection } from "astro:content";

// Get all posts, sorted by date (newest first)
const allPosts = await getCollection("posts");
const sortedPosts = allPosts.sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);

// Get the latest 2 posts for the homepage
const latestPosts = sortedPosts.slice(0, 2);
---

<BaseLayout title="Home Â· Lystaria">
  <div class="container">
    <section class="hero">
      <h1>Welcome to Lystaria</h1>
      <p class="intro">
        Where the mystical meets the mundane. A space for exploring the magic
        woven into everyday lifeâ€”through personal growth, mental wellness, and
        the philosophies that shape us. Here, we honor both the cosmic and the
        practical, the spiritual and the human.
      </p>
      <div class="moon-phase" id="moon-phase">
        <span class="moon-icon">ðŸŒ™</span>
        <span class="moon-text">Calculating moon phase...</span>
      </div>
    </section>

    <section class="featured-posts">
      <h2>Latest Spells & Stories</h2>
      <div class="post-grid">
        {
          latestPosts.map((post) => {
            const formattedDate = new Date(
              post.data.pubDate
            ).toLocaleDateString("en-US", {
              year: "numeric",
              month: "long",
              day: "numeric",
            });

            return (
              <article class="post-card">
                <a href={`/blog/${post.slug}`} class="post-link">
                  <h3>{post.data.title}</h3>
                  <p class="post-date">{formattedDate}</p>
                  <p class="post-description">{post.data.description}</p>
                  {post.data.tags && (
                    <div class="post-tags">
                      {post.data.tags.slice(0, 3).map((tag) => (
                        <a href={`/blog/tag/${tag}`} class="tag-link">
                          <span class="tag">{tag}</span>
                        </a>
                      ))}
                    </div>
                  )}
                </a>
              </article>
            );
          })
        }
      </div>

      <div class="view-all">
        <a href="/blog" class="view-all-link">View All Posts â†’</a>
      </div>
    </section>
  </div>

  <style>
    .hero {
      text-align: center;
      padding: 3rem 0 4rem;
      border-bottom: 1px solid var(--color-border);
    }

    .hero h1 {
      font-size: 3rem;
      margin-bottom: 1.5rem;
      background: linear-gradient(
        135deg,
        var(--color-accent),
        var(--color-accent-bright)
      );
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
    }

    .intro {
      font-size: 1.2rem;
      color: var(--color-text-muted);
      max-width: 700px;
      margin: 0 auto 2rem;
      line-height: 1.8;
    }

    .moon-phase {
      display: inline-flex;
      align-items: center;
      gap: 0.75rem;
      padding: 1rem 1.5rem;
      background-color: var(--color-bg-secondary);
      border: 1px solid var(--color-border);
      border-radius: 50px;
      margin-top: 1rem;
    }

    .moon-icon {
      font-size: 1.5rem;
      animation: glow 3s ease-in-out infinite;
    }

    @keyframes glow {
      0%,
      100% {
        opacity: 1;
        filter: drop-shadow(0 0 5px var(--color-accent));
      }
      50% {
        opacity: 0.8;
        filter: drop-shadow(0 0 15px var(--color-accent));
      }
    }

    .moon-text {
      font-size: 0.95rem;
      color: var(--color-accent-bright);
      letter-spacing: 0.05em;
    }

    .featured-posts {
      padding: 4rem 0;
    }

    .featured-posts h2 {
      text-align: center;
      margin-bottom: 3rem;
    }

    .post-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
      gap: 2rem;
      margin-bottom: 3rem;
    }

    .post-card {
      background-color: var(--color-bg-secondary);
      border: 1px solid var(--color-border);
      border-radius: 8px;
      transition:
        transform 0.3s ease,
        border-color 0.3s ease;
      overflow: hidden;
    }

    .post-card:hover {
      transform: translateY(-4px);
      border-color: var(--color-accent);
    }

    .post-link {
      display: block;
      padding: 2rem;
      color: inherit;
      text-decoration: none;
    }

    .post-card h3 {
      margin-bottom: 0.5rem;
      color: var(--color-accent-bright);
    }

    .post-date {
      color: var(--color-text-muted);
      font-size: 0.9rem;
      font-style: italic;
      margin-bottom: 1rem;
    }

    .post-description {
      color: var(--color-text);
      margin-bottom: 1rem;
      line-height: 1.6;
    }

    .post-tags {
      display: flex;
      gap: 0.5rem;
      flex-wrap: wrap;
      margin-top: 1rem;
    }

    .tag {
      background-color: var(--color-bg);
      color: var(--color-accent);
      padding: 0.25rem 0.75rem;
      border-radius: 20px;
      font-size: 0.85rem;
      border: 1px solid var(--color-border);
    }

    .tag-link {
      text-decoration: none;
    }

    .tag-link:hover .tag {
      background-color: var(--color-accent);
      color: var(--color-bg);
      transform: translateY(-2px);
    }

    .view-all {
      text-align: center;
    }

    .view-all-link {
      display: inline-block;
      padding: 0.75rem 2rem;
      background-color: var(--color-bg-secondary);
      border: 1px solid var(--color-accent);
      border-radius: 50px;
      color: var(--color-accent-bright);
      font-size: 1rem;
      transition: all 0.3s ease;
    }

    .view-all-link:hover {
      background-color: var(--color-accent);
      color: var(--color-bg);
      transform: translateY(-2px);
    }

    @media (max-width: 768px) {
      .hero h1 {
        font-size: 2rem;
      }

      .intro {
        font-size: 1.1rem;
      }

      .post-grid {
        grid-template-columns: 1fr;
      }
    }
  </style>

  <script>
    // Moon phase calculator
    function getMoonPhase() {
      const today = new Date();
      let year = today.getFullYear();
      let month = today.getMonth() + 1;
      const day = today.getDate();

      // Calculate moon phase using astronomical algorithm
      let c = 0;
      let e = 0;
      let jd = 0;
      let b = 0;

      if (month < 3) {
        year--;
        month += 12;
      }

      ++month;
      c = 365.25 * year;
      e = 30.6 * month;
      jd = c + e + day - 694039.09;
      jd /= 29.5305882;
      b = Math.floor(jd);
      jd -= b;
      b = Math.round(jd * 8);

      if (b >= 8) {
        b = 0;
      }

      // Moon phase names and emojis
      const phases = [
        { name: "New Moon", emoji: "ðŸŒ‘" },
        { name: "Waxing Crescent", emoji: "ðŸŒ’" },
        { name: "First Quarter", emoji: "ðŸŒ“" },
        { name: "Waxing Gibbous", emoji: "ðŸŒ”" },
        { name: "Full Moon", emoji: "ðŸŒ•" },
        { name: "Waning Gibbous", emoji: "ðŸŒ–" },
        { name: "Last Quarter", emoji: "ðŸŒ—" },
        { name: "Waning Crescent", emoji: "ðŸŒ˜" },
      ];

      return phases[b];
    }

    // Update the moon phase display
    const moonPhaseEl = document.getElementById("moon-phase");
    if (moonPhaseEl) {
      const phase = getMoonPhase();
      moonPhaseEl.innerHTML = `
        <span class="moon-icon">${phase.emoji}</span>
        <span class="moon-text">Current Moon: ${phase.name}</span>
      `;
    }
  </script>
</BaseLayout>
