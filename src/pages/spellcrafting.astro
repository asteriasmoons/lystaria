    margin-bottom: 1rem;
  }

  .series-intro {
    margin-bottom: 1rem;
  }

  .series-subscribe {
    margin-bottom: 2rem;
  }

  .series-posts {
    margin-bottom: 2rem;
  }

  /* HEADER (still exists) */
  .series-header {
    text-align: center;
    border-bottom: 1px solid var(--color-border);
    margin-bottom: 0.95rem;
  }

  .subtitle {
    font-size: 1rem;
    color: #5ac7fa;
    margin-bottom: 0.9rem;
  }

  /* INTRO (still exists) */
  .intro {
    max-width: 900px;
    margin: 0 auto;
  }

  .desc {
    max-width: 900px;
    margin: 1rem auto;
    padding: 1.5rem;
    border: 2px dotted transparent;
    border-image: var(--gradient-accent) 1;
