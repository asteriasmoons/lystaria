    transform: translateY(-2px);
    box-shadow: 0 6px 18px rgba(126, 126, 255, 0.35);
  }

  .embeddable-buttondown-form input[type="submit"]:active {
    transform: translateY(0);
  }

  .embeddable-buttondown-form p {
    margin: 0.5rem 0 0;
    font-size: 0.9rem;
  }

  .embeddable-buttondown-form p a {
    color: rgba(126, 126, 255, 0.75);
    text-decoration: none;
  }

  .embeddable-buttondown-form p a:hover {
    color: rgba(90, 199, 250, 0.9);
  }

