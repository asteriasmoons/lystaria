---
// @ts-nocheck
// Horoscopes Page
import BaseLayout from "../layouts/BaseLayout.astro";
const API_KEY = import.meta.env.API_NINJAS_KEY;

const signs = [
  { name: "aries", dates: "Mar 21 - Apr 19" },
  { name: "taurus", dates: "Apr 20 - May 20" },
  { name: "gemini", dates: "May 21 - Jun 20" },
  { name: "cancer", dates: "Jun 21 - Jul 22" },
  { name: "leo", dates: "Jul 23 - Aug 22" },
  { name: "virgo", dates: "Aug 23 - Sep 22" },
  { name: "libra", dates: "Sep 23 - Oct 22" },
  { name: "scorpio", dates: "Oct 23 - Nov 21" },
  { name: "sagittarius", dates: "Nov 22 - Dec 21" },
  { name: "capricorn", dates: "Dec 22 - Jan 19" },
  { name: "aquarius", dates: "Jan 20 - Feb 18" },
  { name: "pisces", dates: "Feb 19 - Mar 20" },
];

const horoscopes = {};

// Fetch horoscopes for all signs
for (const sign of signs) {
  try {
    const response = await fetch(
      `https://api.api-ninjas.com/v1/horoscope?zodiac=${sign.name}`,
      {
        headers: {
          "X-Api-Key": API_KEY,
        },
      }
    );

    if (!response.ok) {
      throw new Error(`HTTP error! status: ${response.status}`);
    }

    const data = await response.json();
    horoscopes[sign.name] = {
      ...data,
      dates: sign.dates,
    };
  } catch (error) {
    console.error(`Failed to fetch ${sign.name}:`, error);
    horoscopes[sign.name] = {
      horoscope: "Horoscope unavailable at this time.",
      dates: sign.dates,
    };
  }
}

const today = new Date().toLocaleDateString("en-US", {
  weekday: "long",
  year: "numeric",
  month: "long",
  day: "numeric",
});
---

<BaseLayout
  title="Daily Horoscopes | Lystaria"
  description="Your daily horoscope readings for all zodiac signs"
  image="/banner.png"
  type="website"
>
  <div class="container">
    <header class="horoscope-header">
      <h1>Daily Horoscopes</h1>
      <p class="date">{today}</p>
    </header>

    <main class="horoscopes-container">
      {
        signs.map((sign) => {
          const data = horoscopes[sign.name];
          return (
            <article class="horoscope-card">
              <div class="sign-header">
                <h2>{sign.name}</h2>
                <span class="sign-dates">{data.dates}</span>
              </div>
              <p class="horoscope-text">{data.horoscope}</p>
            </article>
          );
        })
      }
    </main>

    <footer class="horoscope-footer">
      <a href="/">‚Üê Back to Home</a>
    </footer>
  </div>

  <style>
    .horoscope-header {
      text-align: center;
      margin-bottom: 3rem;
      padding-top: 2rem;
    }

    .date {
      color: #5ac7fa;
      font-size: 1.2rem;
    }

    .horoscopes-container {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
      /* gap: 2rem; */
      margin-bottom: 3rem;
    }

    .horoscope-card {
      background: rgba(126, 126, 255, 0.05);
      border: 1px solid rgba(126, 126, 255, 0.2);
      border-radius: 12px;
      padding: 1.5rem;
      transition:
        transform 0.2s,
        border-color 0.2s;
    }

    .horoscope-card:hover {
      transform: translateY(-4px);
      border-color: rgba(126, 126, 255, 0.4);
    }

    .sign-header {
      display: flex;
      align-items: center;
      gap: 1rem;
      margin-bottom: 1rem;
      padding-bottom: 1rem;
      border-bottom: 1px solid rgba(126, 126, 255, 0.2);
    }

    .horoscope-card h2 {
      font-size: 1.5rem;
      color: #5ac7fa;
      margin: 0;
      text-transform: capitalize;
      flex-grow: 1;
      background: none;
      -webkit-background-clip: initial;
      background-clip: initial;
      -webkit-text-fill-color: #5ac7fa;
    }

    .sign-dates {
      font-size: 0.9rem;
      color: #7e7eff;
    }

    .horoscope-text {
      font-size: 0.9rem;
      color: #e0e0e0;
      line-height: 1.7;
    }

    .horoscope-footer {
      text-align: center;
      margin-top: 3rem;
    }

    .horoscope-footer a {
      display: inline-block;

      padding: 0.4rem 1rem;
      font-size: 0.85rem;
      font-weight: 500;

      color: #ffffff;
      background: rgba(10, 10, 15, 0.75);
      border: 1px solid var(--color-border);
      border-radius: 999px;

      text-decoration: none;
      letter-spacing: 0.02em;

      transition: all 0.25s ease;
    }

    .horoscope-footer a:hover {
      border-color: var(--color-accent);
      background: rgba(10, 10, 15, 0.9);
      transform: translateY(-1px);
    }

    @media (max-width: 920px) {
      .horoscope-header h1 {
        font-size: 2rem;
      }

      /* .horoscopes-container {
        grid-template-columns: 1fr;
      } */
    }
  </style>
</BaseLayout>
