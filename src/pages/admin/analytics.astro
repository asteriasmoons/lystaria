---
// @ts-nocheck
export const prerender = false;
import BaseLayout from "../../layouts/BaseLayout.astro";

/* ─────────────────────────────
   AUTH CHECK
───────────────────────────── */
const cookies = Astro.cookies;
const isAuthenticated = cookies.get("admin-auth")?.value === "true";

if (!isAuthenticated) {
  return Astro.redirect("/admin");
}

/* ─────────────────────────────
   UMAMI CLOUD CONFIG
───────────────────────────── */
const UMAMI_API_URL = String(import.meta.env.UMAMI_API_URL || "").trim();       // https://api.umami.is/v1
const UMAMI_WEBSITE_ID = String(import.meta.env.UMAMI_WEBSITE_ID || "").trim(); // 0d899bcd-ac0f-4ef8-8ee7-f3988c9baaf6
const UMAMI_API_TOKEN = String(import.meta.env.UMAMI_API_TOKEN || "").trim();   // token value

const base = UMAMI_API_URL.replace(/\/+$/, "");

const headers = {
  "x-umami-api-key": UMAMI_API_TOKEN,
  "Content-Type": "application/json",
};

/* ─────────────────────────────
   DATE RANGE (LAST 30 DAYS)
───────────────────────────── */
const endDate = Date.now();
const startDate = endDate - 30 * 24 * 60 * 60 * 1000;

/* ─────────────────────────────
   STATE
───────────────────────────── */
let pageviews = 0;
let visitors = 0;
let topPages = [];
let fetchError = "";

/* ─────────────────────────────
   FETCH ANALYTICS
───────────────────────────── */
try {
  // STATS
  const statsUrl = `${base}/websites/${UMAMI_WEBSITE_ID}/stats?startAt=${startDate}&endAt=${endDate}`;
  const statsRes = await fetch(statsUrl, { headers });

  if (!statsRes.ok) {
    const body = await statsRes.text();
    fetchError = `Stats failed (${statsRes.status}): ${body.slice(0, 120)}`;
  } else {
    const stats = await statsRes.json();
    pageviews = Number(stats.pageviews || 0);
    visitors = Number(stats.visitors || 0);
  }

  // TOP PAGES (basic metrics)
  const pagesUrl = `${base}/websites/${UMAMI_WEBSITE_ID}/metrics?startAt=${startDate}&endAt=${endDate}&type=url&limit=10`;
  const pagesRes = await fetch(pagesUrl, { headers });

  if (!pagesRes.ok) {
    const body = await pagesRes.text();
    fetchError =
      fetchError || `Top pages failed (${pagesRes.status}): ${body.slice(0, 120)}`;
  } else {
    const pages = await pagesRes.json();

    topPages = Array.isArray(pages) ? pages : [];

    // POSTS ONLY -- filter by URL path, not filesystem
    topPages = topPages.filter((p) => {
  const path = String(p.x || "").split("?")[0].split("#")[0];
  return path.startsWith("/blog/") && path !== "/blog/";
});
  }
} catch (err) {
  console.error("Umami fetch error:", err);
  fetchError = "Network / fetch error";
}
---

<BaseLayout title="Analytics · Lystaria" description="Private analytics dashboard">
 <div class="admin-analytics">
  <div class="analytics-container">
    <header class="analytics-header">
      <h1>✦ Analytics Dashboard ✦</h1>
      <p class="subtitle">Last 30 days</p>
    </header>

    <div class="stats-grid">
      <div class="stat-card">
        <h3>Total Page Views</h3>
        <p class="stat-number">{pageviews.toLocaleString()}</p>
      </div>

      <div class="stat-card">
        <h3>Unique Visitors</h3>
        <p class="stat-number">{visitors.toLocaleString()}</p>
      </div>
    </div>

    <div class="popular-posts">
      <h3>Most Popular Pages</h3>
      <div class="posts-list">
        {fetchError && <p class="no-data">Analytics error: {fetchError}</p>}

        {!fetchError && topPages.length > 0 ? (
          topPages.map((page, index) => (
            <div class="post-item">
              <span class="post-rank">#{index + 1}</span>
              <div class="post-info">
                <a href={page.x} class="post-url">{page.x}</a>
                <span class="post-views">{Number(page.y || 0).toLocaleString()}</span>
              </div>
            </div>
          ))
        ) : !fetchError ? (
          <p class="no-data">No data available yet</p>
        ) : null}
      </div>
    </div>

    <div class="actions">
      <a href="/admin/logout" class="logout-btn">Logout</a>
    </div>
  </div>
 </div>
 
  <style>
   .analytics-container {
  max-width: 1100px;
  margin: 0 auto;
  padding: 2rem;
}

/* Keep your header centered */
.analytics-header {
  text-align: center;
  margin-bottom: 2.5rem;
  }
  
  .analytics-header h1 {
  display: inline-block;
  background-size: 195% 100% !important;
  background-position: 50% 50% !important;
  background-repeat: no-repeat !important;
}
    
    .stat-card h2,
    .stat-card h3 {
      display: inline-block;
      /* keeps your exact gradient/colors, just makes it cover the whole text */
      background-size: 100% 100% !important;
      background-position: 0% 50% !important;
      background-repeat: no-repeat !important;
   }

    .popular-posts > h3 {
      display: inline-block;
      text-align: center;
      background-image: var(--gradient-heading) !important;
      background-repeat: no-repeat !important;
      background-size: 100% 100% !important;
      background-position: 0% 50% !important;
}

.subtitle {
  color: var(--color-text-muted);
  margin-top: 0.25rem;
  }
    
.stats-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
  gap: 1.25rem;
  margin-bottom: 2rem;
}
    
.stat-card {
  background: rgba(20, 20, 30, 0.35);
  border: 1px solid rgba(126, 126, 255, 0.22);
  border-radius: 16px;
  padding: 1.5rem 1.5rem;
  text-align: center;

  /* subtle depth without screaming */
  box-shadow: 0 10px 24px rgba(0, 0, 0, 0.22);
}

.stat-card h3 {
  margin: 0 0 0.75rem 0;
}
    
.stat-number {
  font-size: 2.3rem;
  line-height: 1.05;
  margin: 0;
  background: linear-gradient(135deg, #7e7eff, #5ac8fa);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
}
    
.popular-posts {
  background: transparent;
  border: none;
  padding: 0;
  border-radius: 0;
}
    
.posts-list {
  margin-top: 1rem;
  display: flex;
  flex-direction: column;
  gap: 0;

  background: rgba(20, 20, 30, 0.28);
  border: 1px solid rgba(126, 126, 255, 0.18);
  border-radius: 16px;
  overflow: hidden;
}
  
.post-item {
  display: flex;
  align-items: center;
  gap: 1rem;
  padding: 1rem 1.25rem;
  background: transparent;
  border: none;
  border-radius: 0;
}

.post-item + .post-item {
  border-top: 1px solid rgba(126, 126, 255, 0.12);
}
    
.post-rank {
  font-weight: 700;
  color: rgba(126, 126, 255, 0.9);
  min-width: 44px;
  text-align: right;
}
   
.post-info {
  flex: 1;
  display: flex;
  justify-content: space-between;
  gap: 1rem;
  align-items: center;

  min-width: 0; /* allows the URL to truncate nicely */
}
   
.post-url {
  color: var(--color-text);
  text-decoration: none;
  flex: 1;
  min-width: 0;

  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.post-url:hover {
  opacity: 0.85;
}

.post-views {
  color: var(--color-text-muted);
  flex-shrink: 0;
}
    
/* No data block sits nicely inside the list panel */
.no-data {
  text-align: center;
  color: var(--color-text-muted);
  padding: 1.5rem;
}

/* Actions */
.actions {
  text-align: center;
  margin-top: 2rem;
}

.logout-btn {
  padding: 0.75rem 1.5rem;
  border-radius: 999px;
  border: 1px solid rgba(126, 126, 255, 0.35);
  background: rgba(20, 20, 30, 0.35);
  color: white;
  text-decoration: none;
}

.logout-btn:hover {
  border-color: rgba(126, 126, 255, 0.55);
  opacity: 0.95;
}
  </style>
</BaseLayout>