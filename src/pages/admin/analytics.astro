// @ts-nocheck
export const prerender = false;
import BaseLayout from "../../layouts/BaseLayout.astro";

/* â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
   AUTH CHECK
â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ */
const cookies = Astro.cookies;
const isAuthenticated = cookies.get("admin-auth")?.value === "true";

if (!isAuthenticated) {
  return Astro.redirect("/admin");
}

/* â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
   UMAMI CONFIG
â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ */
const UMAMI_API_URL = import.meta.env.UMAMI_API_URL; // https://analytics.umami.is
const UMAMI_WEBSITE_ID = import.meta.env.UMAMI_WEBSITE_ID; // UUID
const UMAMI_API_TOKEN = import.meta.env.UMAMI_API_TOKEN;

const base = (UMAMI_API_URL || "").replace(/\/+$/, "").replace(/\/api$/, "");

const headers = {
  Authorization: `Bearer ${UMAMI_API_TOKEN}`,
  "Content-Type": "application/json",
};

/* â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
   DATE RANGE
â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ */
const endDate = Date.now();
const startDate = endDate - 30 * 24 * 60 * 60 * 1000;

/* â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
   STATE
â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ */
let pageviews = 0;
let visitors = 0;
let topPages = [];
let fetchError = "";

/* â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
   FETCH DATA
â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ */
try {
  // â”€â”€ Stats (totals)
  const statsRes = await fetch(
    `${base}/api/websites/${UMAMI_WEBSITE_ID}/stats?startAt=${startDate}&endAt=${endDate}`,
    { headers }
  );

  if (!statsRes.ok) {
    fetchError = `Stats failed (${statsRes.status})`;
  } else {
    const stats = await statsRes.json();
    pageviews = Number(stats.pageviews || 0);
    visitors = Number(stats.visitors || 0);
  }

  // â”€â”€ Top pages (pageviews per path)
  const pagesRes = await fetch(
    `${base}/api/websites/${UMAMI_WEBSITE_ID}/metrics/expanded?startAt=${startDate}&endAt=${endDate}&type=path&limit=10`,
    { headers }
  );

  if (!pagesRes.ok) {
    fetchError = fetchError || `Top pages failed (${pagesRes.status})`;
  } else {
    const pages = await pagesRes.json();
    topPages = Array.isArray(pages) ? pages : [];
  }
} catch (err) {
  console.error("Umami fetch error:", err);
  fetchError = "Network / fetch error";
}
---

<BaseLayout
  title="Analytics Â· Lystaria"
  description="Private analytics dashboard"
>
  <div class="analytics-container">
    <header class="analytics-header">
      <h1>âœ¦ Analytics Dashboard âœ¦</h1>
      <p class="subtitle">Last 30 days</p>
    </header>

    <!-- STATS -->
    <div class="stats-grid">
      <div class="stat-card">
        <h2>Total Page Views</h2>
        <p class="stat-number">{pageviews.toLocaleString()}</p>
      </div>

      <div class="stat-card">
        <h2>Unique Visitors</h2>
        <p class="stat-number">{visitors.toLocaleString()}</p>
      </div>
    </div>

    <!-- TOP PAGES -->
    <div class="popular-posts">
      <h2>Most Popular Pages</h2>

      <div class="posts-list">
        <!-- ðŸ”´ ERROR DISPLAY (THIS IS THE PART YOU COULDNâ€™T SEE BEFORE) -->
        {fetchError && <p class="no-data">Analytics error: {fetchError}</p>}

        <!-- DATA -->
        {
          !fetchError && topPages.length > 0 ? (
            topPages.map((page, index) => (
              <div class="post-item">
                <span class="post-rank">#{index + 1}</span>
                <div class="post-info">
                  <a href={page.name} class="post-url">
                    {page.name}
                  </a>
                  <span class="post-views">
                    {Number(page.pageviews || 0).toLocaleString()} views
                  </span>
                </div>
              </div>
            ))
          ) : !fetchError ? (
            <p class="no-data">No data available yet</p>
          ) : null
        }
      </div>
    </div>

    <div class="actions">
      <a href="/admin/logout" class="logout-btn">Logout</a>
    </div>
  </div>

  <style>
    .analytics-container {
      max-width: 1200px;
      margin: 0 auto;
      padding: 2rem;
    }
    .analytics-header {
      text-align: center;
      margin-bottom: 3rem;
    }
    .analytics-header h1 {
      font-size: 2.5rem;
      background: linear-gradient(135deg, #7e7eff, #5ac8fa);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
    }
    .subtitle {
      color: var(--color-text-muted);
    }
    .stats-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: 2rem;
      margin-bottom: 3rem;
    }
    .stat-card {
      background: rgba(20, 20, 30, 0.6);
      border: 1px solid rgba(126, 126, 255, 0.3);
      border-radius: 16px;
      padding: 2rem;
      text-align: center;
    }
    .stat-number {
      font-size: 3rem;
      background: linear-gradient(135deg, #7e7eff, #5ac8fa);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
    }
    .popular-posts {
      background: rgba(20, 20, 30, 0.6);
      border: 1px solid rgba(126, 126, 255, 0.3);
      border-radius: 16px;
      padding: 2rem;
    }
    .posts-list {
      display: flex;
      flex-direction: column;
      gap: 1rem;
    }
    .post-item {
      display: flex;
      gap: 1rem;
      padding: 1rem;
      background: rgba(10, 10, 15, 0.4);
      border-radius: 8px;
      border: 1px solid rgba(126, 126, 255, 0.2);
    }
    .post-rank {
      font-weight: bold;
      color: #7e7eff;
      min-width: 32px;
    }
    .post-info {
      flex: 1;
      display: flex;
      justify-content: space-between;
    }
    .post-url {
      color: var(--color-text);
      text-decoration: none;
    }
    .post-views {
      color: var(--color-text-muted);
    }
    .no-data {
      text-align: center;
      color: var(--color-text-muted);
      padding: 2rem;
    }
    .actions {
      text-align: center;
      margin-top: 2rem;
    }
    .logout-btn {
      padding: 0.75rem 2rem;
      border-radius: 8px;
      border: 1px solid rgba(126, 126, 255, 0.4);
      background: rgba(126, 126, 255, 0.2);
      color: white;
      text-decoration: none;
    }
  </style>
</BaseLayout>
