---
// @ts-nocheck
export const prerender = false;
import BaseLayout from "../../layouts/BaseLayout.astro";

/* ─────────────────────────────
   AUTH CHECK
───────────────────────────── */
const cookies = Astro.cookies;
const isAuthenticated = cookies.get("admin-auth")?.value === "true";

if (!isAuthenticated) {
  return Astro.redirect("/admin");
}

/* ─────────────────────────────
   UMAMI CLOUD CONFIG
───────────────────────────── */
const UMAMI_API_URL = String(import.meta.env.UMAMI_API_URL || "").trim();       // https://api.umami.is/v1
const UMAMI_WEBSITE_ID = String(import.meta.env.UMAMI_WEBSITE_ID || "").trim(); // 0d899bcd-ac0f-4ef8-8ee7-f3988c9baaf6
const UMAMI_API_TOKEN = String(import.meta.env.UMAMI_API_TOKEN || "").trim();   // token value

const base = UMAMI_API_URL.replace(/\/+$/, "");

const headers = {
  "x-umami-api-key": UMAMI_API_TOKEN,
  "Content-Type": "application/json",
};

/* ─────────────────────────────
   DATE RANGE (LAST 30 DAYS)
───────────────────────────── */
const endDate = Date.now();
const startDate = endDate - 30 * 24 * 60 * 60 * 1000;

/* ─────────────────────────────
   STATE
───────────────────────────── */
let pageviews = 0;
let visitors = 0;
let topPages = [];
let fetchError = "";

/* ─────────────────────────────
   FETCH ANALYTICS
───────────────────────────── */
try {
  // STATS
  const statsUrl = `${base}/websites/${UMAMI_WEBSITE_ID}/stats?startAt=${startDate}&endAt=${endDate}`;
  const statsRes = await fetch(statsUrl, { headers });

  if (!statsRes.ok) {
    const body = await statsRes.text();
    fetchError = `Stats failed (${statsRes.status}): ${body.slice(0, 120)}`;
  } else {
    const stats = await statsRes.json();
    pageviews = Number(stats.pageviews || 0);
    visitors = Number(stats.visitors || 0);
  }

  // TOP PAGES (basic metrics)
  const pagesUrl = `${base}/websites/${UMAMI_WEBSITE_ID}/metrics?startAt=${startDate}&endAt=${endDate}&type=url&limit=10`;
  const pagesRes = await fetch(pagesUrl, { headers });

  if (!pagesRes.ok) {
    const body = await pagesRes.text();
    fetchError =
      fetchError || `Top pages failed (${pagesRes.status}): ${body.slice(0, 120)}`;
  } else {
    const pages = await pagesRes.json();

    topPages = Array.isArray(pages) ? pages : [];

    // POSTS ONLY -- filter by URL path, not filesystem
    topPages = topPages.filter((p) => {
  const path = String(p.x || "").split("?")[0].split("#")[0];
  return path.startsWith("/blog/") && path !== "/blog/";
});
  }
} catch (err) {
  console.error("Umami fetch error:", err);
  fetchError = "Network / fetch error";
}
---

<BaseLayout title="Analytics · Lystaria" description="Private analytics dashboard">
  <div class="analytics-container">
    <header class="analytics-header">
      <h1>✦ Analytics Dashboard ✦</h1>
      <p class="subtitle">Last 30 days</p>
    </header>

    <div class="stats-grid">
      <div class="stat-card">
        <h2>Total Page Views</h2>
        <p class="stat-number">{pageviews.toLocaleString()}</p>
      </div>

      <div class="stat-card">
        <h2>Unique Visitors</h2>
        <p class="stat-number">{visitors.toLocaleString()}</p>
      </div>
    </div>

    <div class="popular-posts">
      <h2>Most Popular Pages</h2>
      <div class="posts-list">
        {fetchError && <p class="no-data">Analytics error: {fetchError}</p>}

        {!fetchError && topPages.length > 0 ? (
          topPages.map((page, index) => (
            <div class="post-item">
              <span class="post-rank">#{index + 1}</span>
              <div class="post-info">
                <a href={page.x} class="post-url">{page.x}</a>
                <span class="post-views">{Number(page.y || 0).toLocaleString()}</span>
              </div>
            </div>
          ))
        ) : !fetchError ? (
          <p class="no-data">No data available yet</p>
        ) : null}
      </div>
    </div>

    <div class="actions">
      <a href="/admin/logout" class="logout-btn">Logout</a>
    </div>
  </div>

  <style>
    .analytics-container { max-width: 1200px; margin: 0 auto; padding: 2rem; }
    .analytics-header { text-align: center; margin-bottom: 3rem; }
    .analytics-header h1 {
      font-size: 2.5rem;
      background: linear-gradient(135deg, #7e7eff, #5ac8fa);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
    }
    .subtitle { color: var(--color-text-muted); }
    .stats-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: 2rem;
      margin-bottom: 3rem;
    }
    .stat-card {
      background: rgba(20,20,30,.6);
      border: 1px solid rgba(126,126,255,.3);
      border-radius: 16px;
      padding: 2rem;
      text-align: center;
    }
    .stat-number {
      font-size: 3rem;
      background: linear-gradient(135deg, #7e7eff, #5ac8fa);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
    }
    .popular-posts {
      background: rgba(20,20,30,.6);
      border: 1px solid rgba(126,126,255,.3);
      border-radius: 16px;
      padding: 2rem;
    }
    .posts-list { display: flex; flex-direction: column; gap: 1rem; }
    .post-item {
      display: flex;
      gap: 1rem;
      padding: 1rem;
      background: rgba(10,10,15,.4);
      border-radius: 8px;
      border: 1px solid rgba(126,126,255,.2);
    }
    .post-rank { font-weight: bold; color: #7e7eff; min-width: 32px; }
    .post-info { flex: 1; display: flex; justify-content: space-between; gap: 1rem; }
    .post-url { color: var(--color-text); text-decoration: none; flex: 1; }
    .post-views { color: var(--color-text-muted); }
    .no-data { text-align: center; color: var(--color-text-muted); padding: 2rem; }
    .actions { text-align: center; margin-top: 2rem; }
    .logout-btn {
      padding: .75rem 2rem;
      border-radius: 8px;
      border: 1px solid rgba(126,126,255,.4);
      background: rgba(126,126,255,.2);
      color: white;
      text-decoration: none;
    }
  </style>
</BaseLayout>