// @ts-nocheck
// Simple password protection
export const prerender = false;
const cookies = Astro.cookies;
const isAuthenticated = cookies.get("admin-auth")?.value === "true";

if (Astro.request.method === "POST") {
  const formData = await Astro.request.formData();
  const password = formData.get("password");

  if (password === import.meta.env.ADMIN_PASSWORD) {
    cookies.set("admin-auth", "true", {
      path: "/",
      maxAge: 60 * 60 * 24, // 24 hours
      httpOnly: true,
    });
    return Astro.redirect("/admin/analytics");
  }
}

if (isAuthenticated) {
  return Astro.redirect("/admin/analytics");
}
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Login · Lystaria</title>
    <style>
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      body {
        background: linear-gradient(135deg, #0a0a0f 0%, #1a1a2e 100%);
        color: #ffffff;
        font-family: "Delius Swash Caps", cursive;
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
      }

      .login-container {
        background: rgba(20, 20, 30, 0.8);
        border: 1px solid rgba(126, 126, 255, 0.3);
        border-radius: 16px;
        padding: 3rem;
        max-width: 400px;
        width: 90%;
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
      }

      h1 {
        font-family: "Berkshire Swash", serif;
        font-size: 2rem;
        text-align: center;
        margin-bottom: 2rem;
        background: linear-gradient(135deg, #7e7eff, #5ac8fa);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
      }

      form {
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
      }

      input[type="password"] {
        background: rgba(10, 10, 15, 0.6);
        border: 1px solid rgba(126, 126, 255, 0.3);
        border-radius: 8px;
        padding: 1rem;
        color: #ffffff;
        font-family: "Delius Swash Caps", cursive;
        font-size: 1rem;
      }

      input[type="password"]:focus {
        outline: none;
        border-color: #7e7eff;
      }

      button {
        background: linear-gradient(135deg, #7e7eff, #5ac8fa);
        border: none;
        border-radius: 8px;
        padding: 1rem;
        color: #ffffff;
        font-family: "Delius Swash Caps", cursive;
        font-size: 1rem;
        cursor: pointer;
        transition: transform 0.2s ease;
      }

      button:hover {
        transform: translateY(-2px);
      }
    </style>
  </head>
  <body>
    <div class="login-container">
      <h1>✦ Admin Access ✦</h1>
      <form method="POST">
        <input
          type="password"
          name="password"
          placeholder="Enter password"
          required
          autofocus
        />
        <button type="submit">Enter</button>
      </form>
    </div>
  </body>
</html>
