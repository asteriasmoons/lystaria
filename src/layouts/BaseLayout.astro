---
// BaseLayout.astro - The wrapper for all pages
// The original one
import "../styles/global.css";

const {
  title = "Lystaria",
  description = "Where the mystical meets the mundane. A space for exploring magic, personal growth, mental wellness, and the philosophies that shape us.",
  image = "/banner.png",
  type = "website",
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Primary Meta Tags -->
    <title>{title}</title>
    <meta name="title" content={title} />
    <meta name="description" content={description} />
    <link rel="canonical" href={canonicalURL} />

    <!-- Open Graph / Facebook / Discord -->
    <meta property="og:type" content={type} />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={new URL(image, Astro.site)} />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={canonicalURL} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={new URL(image, Astro.site)} />

    <!-- Favicon & RSS -->
    <link rel="icon" href="/favicon.ico" sizes="any" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <link rel="apple-touch-icon" href="/apple-touch-icon.png" />
    <link rel="mask-icon" href="/favicon.svg" color="#5AC8FA" />
    <link
      rel="alternate"
      type="application/rss+xml"
      title="Lystaria RSS Feed"
      href="/rss.xml"
    />

    <!-- PWA Manifest -->
    <link rel="manifest" href="/manifest.json" />

    <!-- iOS-specific meta tags -->
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta
      name="apple-mobile-web-app-status-bar-style"
      content="black-translucent"
    />
    <meta name="apple-mobile-web-app-title" content="Lystaria" />
    <link rel="apple-touch-icon" href="/icons/icon-180.png" />

    <!-- Theme color for iOS -->
    <meta name="theme-color" content="#7E7EFF" />

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Berkshire+Swash&family=Hachi+Maru+Pop&display=swap"
      rel="stylesheet"
    />

    <!-- Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-L7K4W4KG8M"
    ></script>
    <script is:inline>
      window.dataLayer = window.dataLayer || [];
      function gtag() {
        dataLayer.push(arguments);
      }
      gtag("js", new Date());
      gtag("config", "G-L7K4W4KG8M");
    </script>

    <!-- UMAMI ANALYTICS -->
    <script
      defer
      src="https://cloud.umami.is/script.js"
      data-website-id="0d899bcd-ac0f-4ef8-8ee7-f3988c9baaf6"></script>

    <script>
      if ("serviceWorker" in navigator) {
        navigator.serviceWorker
          .register("/firebase-messaging-sw.js")
          .then((registration) => {
            console.log("Service Worker registered:", registration);
          })
          .catch((error) => {
            console.error("Service Worker registration failed:", error);
          });
      }
    </script>
  </head>
  <body>
    <header class="site-header">
      <div class="container">
        <nav class="nav">
          <a href="/" class="nav-logo" id="siteLogo">✦ Lystaria ✦</a>

          <div class="nav-actions">
            <button
              class="menu-toggle"
              id="menuToggle"
              aria-label="Toggle menu"
            >
              <img src="/icons/nav.svg" alt="Menu" class="menu-icon-img" />
            </button>
            <button
              id="enable-notifications"
              class="notify-btn"
              aria-label="Notify Button"
            >
              <img src="/icons/bell.svg" alt="notify" class="notify-icon-img" />
            </button>
          </div>

          <div class="nav-links" id="navLinks">
            <a href="/">Home</a>
            <a href="/blog">Blogs</a>
            <a href="/test">Test</a>
            <a href="/home">TG Home</a>
            <a href="/horoscopes">Horoscopes</a>
            <a href="/chat">Discussions</a>
            <a href="/spellcrafting">Spellcrafting</a>
            <a href="/zodiac">Zodiacs</a>
            <a href="/search">Search</a>
            <a href="/updates">Updates</a>
            <a href="/discord">Discord</a>
            <a href="/about">About</a>
            <a href="/admin">Admin</a>
            <a href="/contact">Contact</a>
            <a href="/privacy">Privacy Policy</a>
            <a href="/terms">Terms</a>
            <!-- 
            TEST LINKS
            <a href="#">Test Link 1</a>
            <a href="#">Test Link 2</a>
            <a href="#">Test Link 3</a>
            <a href="#">Test Link 4</a>
            <a href="#">Test Link 5</a>
            <a href="#">Test Link 6</a>
            -->
          </div>
        </nav>
      </div>

      <!-- Notification Popup (matches nav-links style) -->
      <div class="notification-popup" id="notificationPopup">
        <h3 class="notification-title">Notifications</h3>
        <p class="notification-description">
          Get notified when new posts are published
        </p>
        <button id="enable-notifications-btn" class="notification-action-btn">
          Turn On Notifications
        </button>
      </div>
    </header>

  <main>
    <div class="page">
      <slot />
    </div>
  </main>

  <footer class="site-footer">
    <div class="container">
      <p>© 2025 Lystaria · Crafted with moonlight and code</p>
      <div class="footer-links">
        <a href="/rss.xml" target="_blank" rel="noopener" class="rss-link">
          <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
            <path
              d="M6.18 15.64a2.18 2.18 0 0 1 2.18 2.18C8.36 19 7.38 20 6.18 20C5 20 4 19 4 17.82a2.18 2.18 0 0 1 2.18-2.18M4 4.44A15.56 15.56 0 0 1 19.56 20h-2.83A12.73 12.73 0 0 0 4 7.27V4.44m0 5.66a9.9 9.9 0 0 1 9.9 9.9h-2.83A7.07 7.07 0 0 0 4 12.93V10.1z"
            ></path>
          </svg>
          RSS Feed
        </a>
      </div>
    </div>
  </footer>

  <script>
    // Menu toggle functionality
    const menuToggle = document.getElementById("menuToggle");
    const navLinks = document.getElementById("navLinks");

    menuToggle?.addEventListener("click", () => {
      navLinks?.classList.toggle("active");
    });

    // Close menu when clicking outside
    document.addEventListener("click", (e) => {
      if (
        !menuToggle?.contains(e.target as Node) &&
        !navLinks?.contains(e.target as Node)
      ) {
        navLinks?.classList.remove("active");
      }
    });

    // Close menu when a link is clicked
    navLinks?.querySelectorAll("a").forEach((link) => {
      link.addEventListener("click", () => {
        navLinks.classList.remove("active");
      });
    });

    // Notification toggle functionality
    const notifyBtn = document.getElementById("enable-notifications");
    const notificationPopup = document.getElementById("notificationPopup");

    notifyBtn?.addEventListener("click", () => {
      notificationPopup?.classList.toggle("active");
      // Close nav menu if open
      navLinks?.classList.remove("active");
    });

    // Close notification popup when clicking outside
    document.addEventListener("click", (e) => {
      if (
        !notifyBtn?.contains(e.target as Node) &&
        !notificationPopup?.contains(e.target as Node)
      ) {
        notificationPopup?.classList.remove("active");
      }
    });
  </script>

  <script is:inline>
    document.addEventListener("DOMContentLoaded", function () {
      const logo = document.getElementById("siteLogo");
      if (logo) {
        logo.addEventListener("dblclick", function (e) {
          e.preventDefault();
          window.location.href = "/admin";
        });
      }
    });
  </script>

  <script is:inline>
    window.showToast = function (message, ms = 1800) {
      const el = document.getElementById("toast");
      if (!el) return;

      el.textContent = String(message ?? "");
      el.classList.add("show");

      clearTimeout(el._toastTimer);
      el._toastTimer = setTimeout(() => {
        el.classList.remove("show");
      }, ms);
    };
  </script>

  <script>
    // @ts-nocheck 
    import { initializeApp } from "firebase/app";
    import { getDatabase, ref, set } from "firebase/database";
    import { getMessaging, getToken } from "firebase/messaging";

    // Run AFTER the DOM exists so querySelector doesn't return null.
    window.addEventListener("DOMContentLoaded", () => {
      const actionBtn = document.getElementById(
        "enable-notifications-btn"
      ) as HTMLButtonElement | null;

      const description = document.querySelector(
        ".notification-description"
      ) as HTMLElement | null;

      if (!actionBtn || !description) return;

      // ---------- Helpers ----------
      const hasNotificationAPI = () =>
        typeof window !== "undefined" && "Notification" in window;

      const isStandalone = () =>
        window.matchMedia?.("(display-mode: standalone)")?.matches ||
        // iOS legacy standalone flag
        // @ts-ignore
        window.navigator.standalone === true;

      const setUI = (opts: {
        buttonText: string;
        disabled?: boolean;
        enabledClass?: boolean;
        descriptionText?: string;
      }) => {
        actionBtn.textContent = opts.buttonText;
        actionBtn.disabled = Boolean(opts.disabled);

        if (opts.enabledClass) actionBtn.classList.add("enabled");
        else actionBtn.classList.remove("enabled");

        if (typeof opts.descriptionText === "string") {
          description.textContent = opts.descriptionText;
        }
      };

      const safePermission = (): NotificationPermission | "unsupported" => {
        if (!hasNotificationAPI()) return "unsupported";
        return Notification.permission;
      };

      // ---------- Firebase config ----------
      const firebaseConfig = {
        apiKey: import.meta.env.PUBLIC_FIREBASE_API_KEY,
        authDomain: import.meta.env.PUBLIC_FIREBASE_AUTH_DOMAIN,
        projectId: import.meta.env.PUBLIC_FIREBASE_PROJECT_ID,
        storageBucket: import.meta.env.PUBLIC_FIREBASE_STORAGE_BUCKET,
        messagingSenderId: import.meta.env.PUBLIC_FIREBASE_MESSAGING_SENDER_ID,
        appId: import.meta.env.PUBLIC_FIREBASE_APP_ID,
        databaseURL: import.meta.env.PUBLIC_FIREBASE_DATABASE_URL,
      };

      let app;
      try {
        app = initializeApp(firebaseConfig, "notifications-app");
      } catch {
        app = initializeApp(firebaseConfig);
      }

      const db = getDatabase(app);

      // ---------- Initial UI state (do NOT trust localStorage alone) ----------
      const localFlag = localStorage.getItem("notificationsEnabled") === "true";
      const permissionNow = safePermission();

      // If localStorage says enabled but permission isn't granted, unstick it.
      if (localFlag && permissionNow !== "granted") {
        localStorage.removeItem("notificationsEnabled");
      }

      // Refresh after potential cleanup
      const isSubscribed =
        localStorage.getItem("notificationsEnabled") === "true";
      const permission = safePermission();

      if (permission === "unsupported") {
        setUI({
          buttonText: "Not Supported",
          disabled: true,
          enabledClass: false,
          descriptionText:
            "Notifications aren’t available in this browser context on iOS. Add to Home Screen and open from the app icon.",
        });
      } else if (permission === "denied") {
        setUI({
          buttonText: "Notifications Blocked",
          disabled: false,
          enabledClass: false,
          descriptionText:
            "Notifications are blocked for this web app. To reset: enable in iOS Settings → Notifications, or delete the Home Screen icon and add it again.",
        });
      } else if (isSubscribed && permission === "granted") {
        setUI({
          buttonText: "Notifications Enabled",
          disabled: true,
          enabledClass: true,
          descriptionText: "You'll be notified when new posts are published",
        });
      } else {
        // permission === "default" OR subscribed=false
        setUI({
          buttonText: "Enable Notifications",
          disabled: false,
          enabledClass: false,
          descriptionText: "Turn on notifications for new posts.",
        });
      }

      // ---------- Click handler ----------
      actionBtn.addEventListener("click", async () => {
        // Re-check each click (don’t rely on initial vars)
        const permissionOnClick = safePermission();
        const subscribedOnClick =
          localStorage.getItem("notificationsEnabled") === "true";

        if (subscribedOnClick && permissionOnClick === "granted") return;

        // iOS-first rule: require installed PWA context
        if (!isStandalone()) {
          setUI({
            buttonText: "Install Required",
            disabled: false,
            enabledClass: false,
            descriptionText:
              "On iPhone/iPad, you must Add to Home Screen and open from the Home Screen icon before enabling notifications.",
          });
          return;
        }

        // Must exist before calling Notification.requestPermission()
        if (!hasNotificationAPI()) {
          setUI({
            buttonText: "Not Supported",
            disabled: false,
            enabledClass: false,
            descriptionText:
              "Notifications aren’t available in this browser context. Please use the installed Home Screen app.",
          });
          return;
        }

        // If already denied, browsers won't re-prompt
        if (Notification.permission === "denied") {
          setUI({
            buttonText: "Notifications Blocked",
            disabled: false,
            enabledClass: false,
            descriptionText:
              "iOS won’t re-ask once blocked. Enable in iOS Settings → Notifications, or delete the Home Screen icon and add it again.",
          });
          return;
        }

        setUI({
          buttonText: "Requesting...",
          disabled: true,
          enabledClass: false,
          descriptionText: "Requesting permission…",
        });

        try {
          // Service Worker required
          if (!("serviceWorker" in navigator)) {
            throw new Error("Service Worker not supported");
          }

          // Register the FCM service worker explicitly (don’t rely on .ready)
          const registration = await navigator.serviceWorker.register(
            "/firebase-messaging-sw.js"
          );

          // Some browsers need it active/ready
          await navigator.serviceWorker.ready;

          const messaging = getMessaging(app);

          // Request permission (must be user-initiated — this click is good)
          const permission = await Notification.requestPermission();

          if (permission !== "granted") {
            setUI({
              buttonText:
                permission === "denied"
                  ? "Permission Blocked"
                  : "Permission Not Granted",
              disabled: false,
              enabledClass: false,
              descriptionText:
                permission === "denied"
                  ? "Notifications are blocked. Enable them in iOS Settings → Notifications, or delete/re-add the Home Screen app."
                  : "Permission wasn’t granted. You can try again anytime.",
            });
            return;
          }

          const token = await getToken(messaging, {
            vapidKey: import.meta.env.PUBLIC_FIREBASE_VAPID_KEY,
            serviceWorkerRegistration: registration,
          });

          if (!token) throw new Error("No token received");

          const tokenRef = ref(
            db,
            `push-tokens/${token.replace(/[.#$[\]]/g, "_")}`
          );

          await set(tokenRef, {
            token,
            subscribedAt: Date.now(),
            device: "iOS",
          });

          localStorage.setItem("notificationsEnabled", "true");

          setUI({
            buttonText: "Notifications Enabled",
            disabled: true,
            enabledClass: true,
            descriptionText: "You'll be notified when new posts are published",
          });

          setTimeout(() => {
            document
              .getElementById("notificationPopup")
              ?.classList.remove("active");
          }, 2000);
        } catch (error) {
          console.error("Full error:", error);

          setUI({
            buttonText: "Error",
            disabled: false,
            enabledClass: false,
            descriptionText:
              error instanceof Error
                ? error.message
                : "Something went wrong enabling notifications.",
          });
        }
      });
    });
  </script>

     <div id="toast" aria-live="polite"></div>
</body>
</html>
