---
// BaseLayout.astro - The wrapper for all pages
import "../styles/global.css";

const {
  title = "Lystaria",
  description = "Where the mystical meets the mundane. A space for exploring magic, personal growth, mental wellness, and the philosophies that shape us.",
  image = "/banner.png",
  type = "website",
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Primary Meta Tags -->
    <title>{title}</title>
    <meta name="title" content={title} />
    <meta name="description" content={description} />
    <link rel="canonical" href={canonicalURL} />

    <!-- Open Graph / Facebook / Discord -->
    <meta property="og:type" content={type} />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={new URL(image, Astro.site)} />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={canonicalURL} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={new URL(image, Astro.site)} />

    <!-- Favicon & RSS -->
    <link rel="icon" type="image/png" href="/favicon.png" />
    <link
      rel="alternate"
      type="application/rss+xml"
      title="Lystaria RSS Feed"
      href="/rss.xml"
    />

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Berkshire+Swash&family=Delius+Swash+Caps&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    <header class="site-header">
      <div class="container">
        <nav class="nav">
          <a href="/" class="nav-logo">✦ Lystaria ✦</a>
          <div class="nav-links">
            <a href="/">Home</a>
            <a href="/blog">Blog</a>
            <a href="/search">Search</a>
            <a href="/about">About</a>
          </div>
        </nav>
      </div>
    </header>

    <main>
      <slot />
    </main>

    <footer class="site-footer">
      <div class="container">
        <p>© 2025 Lystaria · Crafted with moonlight and code</p>
        <div class="footer-links">
          <a href="/rss.xml" target="_blank" rel="noopener" class="rss-link">
            <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
              <path
                d="M6.18 15.64a2.18 2.18 0 0 1 2.18 2.18C8.36 19 7.38 20 6.18 20C5 20 4 19 4 17.82a2.18 2.18 0 0 1 2.18-2.18M4 4.44A15.56 15.56 0 0 1 19.56 20h-2.83A12.73 12.73 0 0 0 4 7.27V4.44m0 5.66a9.9 9.9 0 0 1 9.9 9.9h-2.83A7.07 7.07 0 0 0 4 12.93V10.1z"
              ></path>
            </svg>
            RSS Feed
          </a>
        </div>
      </div>
    </footer>

    <style>
      /* Header Styles */
      .site-header {
        border-bottom: 1px solid var(--color-border);
        padding: 1.5rem 0;
        background-color: var(--color-bg);
      }

      .nav {
        display: flex;
        justify-content: space-between;
        align-items: center;
      }

      .nav-logo {
        font-size: 1.3rem;
        font-weight: 600;
        color: var(--color-accent-bright);
        letter-spacing: 0.1em;
      }

      .nav-links {
        display: flex;
        gap: 2rem;
      }

      .nav-links a {
        font-size: 0.95rem;
        text-transform: uppercase;
        letter-spacing: 0.08em;
      }

      /* Main content area */
      main {
        min-height: calc(100vh - 200px);
        padding: 4rem 0;
      }

      /* Footer Styles */
      .site-footer {
        border-top: 1px solid var(--color-border);
        padding: 2rem 0;
        text-align: center;
        color: var(--color-text-muted);
        font-size: 0.9rem;
      }

      .footer-links {
        margin-top: 1rem;
        display: flex;
        justify-content: center;
        gap: 1rem;
      }

      .rss-link {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        color: var(--color-accent);
        font-size: 0.9rem;
        transition: color 0.3s ease;
      }

      .rss-link:hover {
        color: var(--color-accent-bright);
      }

      .rss-link svg {
        width: 16px;
        height: 16px;
      }

      /* Mobile responsive */
      @media (max-width: 768px) {
        .nav {
          flex-direction: column;
          gap: 1rem;
        }

        .nav-links {
          gap: 1rem;
        }
      }
    </style>
  </body>
</html>
