---
// BaseLayout.astro - The wrapper for all pages
import '../styles/global.css';
const { title = "Lystaria" } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{title}</title>
  <link rel="icon" type="image/png" href="/favicon.png">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Berkshire+Swash&family=Delius+Swash+Caps&display=swap" rel="stylesheet">
</head>
<body>
  <header class="site-header">
    <div class="container">
      <nav class="nav">
        <a href="/" class="nav-logo">✦ Lystaria ✦</a>
        <div class="nav-links">
          <a href="/">Home</a>
          <a href="/blog">Blog</a>
          <a href="/about">About</a>
        </div>
      </nav>
    </div>
  </header>

  <main>
    <slot />
  </main>

  <footer class="site-footer">
    <div class="container">
      <p>© 2025 Lystaria · Crafted with moonlight and code</p>
    </div>
  </footer>

  <style>
    /* Header Styles */
    .site-header {
      border-bottom: 1px solid var(--color-border);
      padding: 1.5rem 0;
      background-color: var(--color-bg);
    }

    .nav {
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    .nav-logo {
      font-size: 1.3rem;
      font-weight: 600;
      color: var(--color-accent-bright);
      letter-spacing: 0.1em;
    }

    .nav-links {
      display: flex;
      gap: 2rem;
    }

    .nav-links a {
      font-size: 0.95rem;
      text-transform: uppercase;
      letter-spacing: 0.08em;
    }

    /* Main content area */
    main {
      min-height: calc(100vh - 200px);
      padding: 4rem 0;
    }

    /* Footer Styles */
    .site-footer {
      border-top: 1px solid var(--color-border);
      padding: 2rem 0;
      text-align: center;
      color: var(--color-text-muted);
      font-size: 0.9rem;
    }

    /* Mobile responsive */
    @media (max-width: 768px) {
      .nav {
        flex-direction: column;
        gap: 1rem;
      }

      .nav-links {
        gap: 1rem;
      }
    }
  </style>
</body>
</html>